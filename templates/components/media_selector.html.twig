.media-library-item:hover .media-library-overlay,
.media-library-item.selected .media-library-overlay {
    opacity: 1;
}

.media-library-item .media-library-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.8);
    color: white;
    padding: 0.5rem;
