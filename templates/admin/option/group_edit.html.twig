{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.option.group_edit.title'|trans({}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('admin_option_index') }}">{{ 'admin.navigation.options'|trans({}, 'admin') }}</a>
            </li>
            <li class="breadcrumb-item active">{{ 'admin.option.group_edit.title'|trans({}, 'admin') }}</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil me-2"></i>{{ 'admin.option.group_edit.title'|trans({}, 'admin') }}
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': true}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.code) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.inputType) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.isRequired) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.isActive) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.sortOrder) }}
                        </div>
                    </div>

                    <hr class="my-4">

                    <h6 class="mb-3">
                        <i class="bi bi-translate me-2"></i>{{ 'admin.option.translations'|trans({}, 'admin') }}
                    </h6>

                    {% set languages = get_languages() %}
                    {% if languages|length > 0 %}
                    
                        <ul class="nav nav-tabs" role="tablist">
                            {% for language in languages %}
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link {% if loop.first %}active{% endif %}" 
                                            type="button" 
                                            data-bs-toggle="tab" 
                                            data-bs-target="#lang-{{ language.code }}" 
                                            role="tab">
                                        {{ language.nativeName }}
                                        {% if language.isDefault() %}
                                            <i class="bi bi-star-fill text-warning ms-1" title="{{ 'language.default.title'|trans }}"></i>
                                        {% endif %}
                                    </button>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="tab-content" id="languageTabs">
                            {% for language in languages %}
                                {% set translation = null %}
                                {% for t in optionGroup.translations %}
                                    {% if t.language.code == language.code %}
                                        {% set translation = t %}
                                    {% endif %}
                                {% endfor %}
                                <div class="tab-pane fade {% if loop.first %}show active{% endif %}" 
                                     id="lang-{{ language.code }}" 
                                     role="tabpanel">
                                    
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label">
                                                    {{ 'admin.option.group.name'|trans({}, 'admin') }}
                                                    <span class="badge bg-primary">{{ language.code|upper }}</span>
                                                    {% if language.isDefault() %}
                                                        <i class="bi bi-star-fill text-warning ms-1" title="{{ 'language.default.title'|trans }}"></i>
                                                    {% endif %}
                                                </label>
                                                <input type="text" 
                                                       class="form-control" 
                                                       name="product_option_group[translations][{{ loop.index0 }}][name]" 
                                                       value="{{ translation ? translation.name : '' }}"
                                                       placeholder="{{ 'admin.option.group.name_placeholder'|trans({}, 'admin') }}">
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mb-3">
                                                <label class="form-label">{{ 'admin.option.group.description'|trans({}, 'admin') }}</label>
                                                <textarea class="form-control" 
                                                          name="product_option_group[translations][{{ loop.index0 }}][description]" 
                                                          rows="3"
                                                          placeholder="{{ 'admin.option.group.description_placeholder'|trans({}, 'admin') }}">{{ translation ? translation.description : '' }}</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <input type="hidden" 
                                           name="product_option_group[translations][{{ loop.index0 }}][language]" 
                                           value="{{ language.code }}">
                                </div>
                            {% endfor %}
                        </div>

                    {% else %}
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            {{ 'admin.option.no_translations'|trans({}, 'admin') }}
                        </div>
                    {% endif %}

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="{{ path('admin_option_index') }}" class="btn btn-secondary">
                            {{ 'common.actions.cancel'|trans({}, 'admin') }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>{{ 'common.actions.update'|trans({}, 'admin') }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>{{ 'admin.option.group_info.title'|trans({}, 'admin') }}
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>{{ 'admin.option.group.code'|trans({}, 'admin') }}:</strong>
                    <code>{{ optionGroup.code }}</code>
                </div>
                
                <div class="mb-3">
                    <strong>{{ 'admin.option.group.type'|trans({}, 'admin') }}:</strong>
                    <span class="badge bg-info">{{ optionGroup.inputType|title }}</span>
                </div>
                
                <div class="mb-3">
                    <strong>{{ 'admin.option.group.required'|trans({}, 'admin') }}:</strong>
                    {% if optionGroup.isRequired %}
                        <span class="badge bg-warning">{{ 'admin.option.yes'|trans({}, 'admin') }}</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ 'admin.option.no'|trans({}, 'admin') }}</span>
                    {% endif %}
                </div>
                
                <div class="mb-3">
                    <strong>{{ 'admin.option.group.active'|trans({}, 'admin') }}:</strong>
                    {% if optionGroup.isActive %}
                        <span class="badge bg-success">{{ 'admin.option.active'|trans({}, 'admin') }}</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ 'admin.option.inactive'|trans({}, 'admin') }}</span>
                    {% endif %}
                </div>
                
                <div class="mb-3">
                    <strong>{{ 'admin.option.group.options_count'|trans({}, 'admin') }}:</strong>
                    {{ optionGroup.options|length }}
                </div>
                
                <hr>
                
                <div class="small text-muted">
                    <strong>{{ 'admin.option.group.created'|trans({}, 'admin') }}:</strong>
                    {{ optionGroup.createdAt ? optionGroup.createdAt|date('d/m/Y H:i') : '—' }}
                </div>
                
                <div class="small text-muted">
                    <strong>{{ 'admin.option.group.updated'|trans({}, 'admin') }}:</strong>
                    {{ optionGroup.updatedAt ? optionGroup.updatedAt|date('d/m/Y H:i') : '—' }}
                </div>
            </div>
        </div>
        
        {% if optionGroup.options|length > 0 %}
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-list me-2"></i>{{ 'admin.option.group.options_in_group'|trans({}, 'admin') }}
                    </h6>
                </div>
                <div class="card-body">
                    {% for option in optionGroup.options %}
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>{{ option.name(app.request.locale) ?: option.code }}</span>
                            {% if option.isActive %}
                                <span class="badge bg-success">{{ 'admin.option.active'|trans({}, 'admin') }}</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ 'admin.option.inactive'|trans({}, 'admin') }}</span>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}