{% extends 'admin/base.html.twig' %}

{% block title %}
    {{ 'user.show.title'|trans({'%name%': user.fullName}) }}
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">{{ 'user.show.heading'|trans({'%name%': user.fullName}) }}</h1>
                <div>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> {{ 'action.edit'|trans }}
                    </a>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> {{ 'action.back_to_list'|trans }}
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">{{ 'user.show.personal_info'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>{{ 'user.form.first_name'|trans }} :</strong><br>
                                        {{ user.firstName }}</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>{{ 'user.form.last_name'|trans }} :</strong><br>
                                        {{ user.lastName }}</p>
                                </div>
                            </div>

                            <p><strong>{{ 'user.form.email'|trans }} :</strong><br>
                                <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                            </p>

                            <p><strong>{{ 'user.table.roles'|trans }} :</strong><br>
                                {% for role in user.roles %}
                                    <span class="badge {{ include('admin/user/_role_badge.html.twig', {role: role}) }} me-1">
                                        {{ ('user.roles.' ~ role|lower)|trans }}
                                    </span>
                                {% endfor %}
                            </p>

                            <p><strong>{{ 'user.table.status'|trans }} :</strong><br>
                                <span class="badge {{ user.isActive ? 'bg-success' : 'bg-secondary' }}">
                                    {{ user.isActive ? 'user.status.active'|trans : 'user.status.inactive'|trans }}
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">{{ 'user.show.quick_actions'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> {{ 'user.show.edit_user'|trans }}
                                </a>

                                {% if user != app.user %}
                                    <form method="post" action="{{ path('admin_user_toggle_active', {'id': user.id}) }}">
                                        <button type="submit"
                                                class="btn btn-{{ user.isActive ? 'warning' : 'success' }} w-100"
                                                onclick="return confirm('{{ (user.isActive ? 'user.confirm.deactivate' : 'user.confirm.activate')|trans({'%name%': user.fullName}) }}')">
                                            <i class="bi bi-{{ user.isActive ? 'ban' : 'check' }}"></i>
                                            {{ user.isActive ? 'action.deactivate'|trans : 'action.activate'|trans }}
                                        </button>
                                    </form>

                                    <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button type="submit"
                                                class="btn btn-danger w-100"
                                                onclick="return confirm('{{ 'user.confirm.delete'|trans({'%name%': user.fullName}) }}')">
                                            <i class="bi bi-trash"></i> {{ 'action.delete'|trans }}
                                        </button>
                                    </form>
                                {% else %}
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i>
                                        {{ 'user.show.own_profile'|trans }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">{{ 'user.show.system_info'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>{{ 'user.table.id'|trans }} :</strong><br>
                                {{ user.id }}</p>

                            <p><strong>{{ 'user.created_at'|trans }} :</strong><br>
                                {{ user.createdAt|format_datetime('medium', 'short', locale=app.request.locale) }}</p>

                            <p><strong>{{ 'user.updated_at'|trans }} :</strong><br>
                                {{ user.updatedAt|format_datetime('medium', 'short', locale=app.request.locale) }}</p>

                            {% if user.lastLoginAt %}
                                <p><strong>{{ 'user.last_login'|trans }} :</strong><br>
                                    {{ user.lastLoginAt|format_datetime('medium', 'short', locale=app.request.locale) }}</p>
                            {% else %}
                                <p><strong>{{ 'user.last_login'|trans }} :</strong><br>
                                    <em class="text-muted">{{ 'user.never_logged_in'|trans }}</em></p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}