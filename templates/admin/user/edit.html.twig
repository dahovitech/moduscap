{% extends 'admin/base.html.twig' %}

{% block title %}
    {{ 'user.edit.title'|trans({'%name%': user.fullName}) }}
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">{{ 'user.edit.heading'|trans({'%name%': user.fullName}) }}</h1>
                <div>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-info me-2">
                        <i class="bi bi-eye"></i> {{ 'action.view'|trans }}
                    </a>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> {{ 'action.back_to_list'|trans }}
                    </a>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">{{ 'user.edit.form_title'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.firstName) }}
                                    {{ form_widget(form.firstName) }}
                                    {{ form_errors(form.firstName) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.lastName) }}
                                    {{ form_widget(form.lastName) }}
                                    {{ form_errors(form.lastName) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="mb-3">
                                <h6>{{ 'user.form.password.change_title'|trans }}</h6>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.plainPassword.first) }}
                                        {{ form_widget(form.plainPassword.first) }}
                                        {{ form_errors(form.plainPassword.first) }}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.plainPassword.second) }}
                                        {{ form_widget(form.plainPassword.second) }}
                                        {{ form_errors(form.plainPassword.second) }}
                                    </div>
                                </div>
                                <small class="form-text text-muted">
                                    {{ 'user.form.password.help'|trans }}
                                </small>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.roles) }}
                                <div class="mt-2">
                                    {{ form_widget(form.roles) }}
                                </div>
                                {{ form_errors(form.roles) }}
                                <small class="form-text text-muted">
                                    {{ 'user.form.roles.help'|trans }}
                                </small>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    {{ form_widget(form.isActive) }}
                                    {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                                {{ form_errors(form.isActive) }}
                                {{ form_help(form.isActive) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('admin_user_index') }}" class="btn btn-secondary">
                                    <i class="bi bi-x"></i> {{ 'action.cancel'|trans }}
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-floppy"></i> {{ 'action.save_changes'|trans }}
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">{{ 'user.system_info.title'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>{{ 'user.created_at'|trans }} :</strong><br>
                                        {{ user.createdAt|format_datetime('medium', 'short', locale=app.request.locale) }}
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>{{ 'user.updated_at'|trans }} :</strong><br>
                                        {{ user.updatedAt|format_datetime('medium', 'short', locale=app.request.locale) }}
                                    </p>
                                </div>
                            </div>
                            {% if user.lastLoginAt %}
                                <p><strong>{{ 'user.last_login'|trans }} :</strong><br>
                                    {{ user.lastLoginAt|format_datetime('medium', 'short', locale=app.request.locale) }}
                                </p>
                            {% else %}
                                <p><strong>{{ 'user.last_login'|trans }} :</strong><br>
                                    <em class="text-muted">{{ 'user.never_logged_in'|trans }}</em>
                                </p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}