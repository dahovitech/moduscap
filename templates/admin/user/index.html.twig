{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'user.index.title'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">{{ 'user.index.heading'|trans }}</h1>
                <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus"></i> {{ 'user.index.create_button'|trans }}
                </a>
            </div>

            {# Flash Messages #}
            {% for flash_error in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ flash_error|trans }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans }}"></button>
                </div>
            {% endfor %}

            {% for flash_success in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ flash_success|trans }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans }}"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">{{ 'user.index.table_title'|trans }}</h5>
                </div>
                <div class="card-body">
                    {% if users is empty %}
                        <div class="text-center py-5">
                            <i class="bi bi-people fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">{{ 'user.index.empty.title'|trans }}</h5>
                            <p class="text-muted">{{ 'user.index.empty.description'|trans }}</p>
                            <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus"></i> {{ 'user.index.empty.create_button'|trans }}
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>{{ 'user.table.id'|trans }}</th>
                                        <th>{{ 'user.table.full_name'|trans }}</th>
                                        <th>{{ 'user.table.email'|trans }}</th>
                                        <th>{{ 'user.table.roles'|trans }}</th>
                                        <th>{{ 'user.table.status'|trans }}</th>
                                        <th>{{ 'user.table.last_login'|trans }}</th>
                                        <th>{{ 'user.table.created_at'|trans }}</th>
                                        <th>{{ 'user.table.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>
                                                <strong>{{ user.fullName }}</strong>
                                            </td>
                                            <td>
                                                <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                                            </td>
                                            <td>
                                                {% for role in user.roles %}
                                                    <span class="badge {{ include('admin/user/_role_badge.html.twig', {role: role}) }}">
                                                        {{ ('user.roles.' ~ role|lower)|trans }}
                                                    </span>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                <span class="badge {{ user.isActive ? 'bg-success' : 'bg-secondary' }}">
                                                    {{ user.isActive ? 'user.status.active'|trans : 'user.status.inactive'|trans }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if user.lastLoginAt %}
                                                    <small class="text-muted">
                                                        {{ user.lastLoginAt|format_datetime('medium', 'short', locale=app.request.locale) }}
                                                    </small>
                                                {% else %}
                                                    <small class="text-muted">{{ 'user.never_logged_in'|trans }}</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ user.createdAt|format_datetime('medium', 'short', locale=app.request.locale) }}
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_user_show', {'id': user.id}) }}"
                                                       class="btn btn-sm btn-outline-info"
                                                       title="{{ 'action.view'|trans }}">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"
                                                       class="btn btn-sm btn-outline-primary"
                                                       title="{{ 'action.edit'|trans }}">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>

                                                    {% if user != app.user %}
                                                        <form method="post"
                                                              action="{{ path('admin_user_toggle_active', {'id': user.id}) }}"
                                                              style="display: inline;">
                                                            <button type="submit"
                                                                    class="btn btn-sm btn-outline-{{ user.isActive ? 'warning' : 'success' }}"
                                                                    title="{{ user.isActive ? 'action.deactivate'|trans : 'action.activate'|trans }}"
                                                                    onclick="return confirm('{{ (user.isActive ? 'user.confirm.deactivate' : 'user.confirm.activate')|trans({'%name%': user.fullName}) }}')">
                                                                <i class="bi bi-{{ user.isActive ? 'ban' : 'check' }}"></i>
                                                            </button>
                                                        </form>

                                                        <form method="post"
                                                              action="{{ path('admin_user_delete', {'id': user.id}) }}"
                                                              style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                            <button type="submit"
                                                                    class="btn btn-sm btn-outline-danger"
                                                                    title="{{ 'action.delete'|trans }}"
                                                                    onclick="return confirm('{{ 'user.confirm.delete'|trans({'%name%': user.fullName}) }}')">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    {% else %}
                                                        <span class="badge bg-light text-dark">{{ 'user.you'|trans }}</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}