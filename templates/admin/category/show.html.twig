{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.category.show_title'|trans({'%name%': category.translations|first.name ?? category.code}) }} - MODUSCAP{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">{{ 'admin.category.show_title'|trans({'%name%': category.translations|first.name ?? category.code}) }}</h1>
            <p class="text-muted">{{ 'admin.category.show_description'|trans }}</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-outline-warning">
                <i class="fas fa-edit me-2"></i>{{ 'admin.common.edit'|trans }}
            </a>
            <a href="{{ path('admin_category_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>{{ 'admin.common.back'|trans }}
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Informations générales -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>{{ 'admin.category.general_information'|trans }}
                    </h5>
                    <div class="d-flex gap-2">
                        {% if category.isActive %}
                            <span class="badge bg-success">{{ 'admin.category.active'|trans }}</span>
                        {% else %}
                            <span class="badge bg-danger">{{ 'admin.category.inactive'|trans }}</span>
                        {% endif %}
                        {% if category.isFeatured %}
                            <span class="badge bg-warning text-dark">{{ 'admin.category.featured'|trans }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">{{ 'admin.category.code'|trans }}:</dt>
                                <dd class="col-sm-8">
                                    <code>{{ category.code }}</code>
                                </dd>
                                
                                <dt class="col-sm-4">{{ 'admin.category.sort_order'|trans }}:</dt>
                                <dd class="col-sm-8">{{ category.sortOrder }}</dd>
                                
                                <dt class="col-sm-4">{{ 'admin.category.created_at'|trans }}:</dt>
                                <dd class="col-sm-8">{{ category.createdAt ? category.createdAt|date('d/m/Y H:i') : '-' }}</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">

                                
                                <dt class="col-sm-4">{{ 'admin.category.updated_at'|trans }}:</dt>
                                <dd class="col-sm-8">{{ category.updatedAt ? category.updatedAt|date('d/m/Y H:i') : '-' }}</dd>
                                
                                <dt class="col-sm-4">{{ 'admin.category.category_id'|trans }}:</dt>
                                <dd class="col-sm-8">
                                    <small class="text-muted">#{{ category.id }}</small>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Traductions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-globe me-2"></i>{{ 'admin.category.translations'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    {% if category.translations %}
                    <ul class="nav nav-tabs" id="languageTabs">
                        {% for translation in category.translations %}
                        <li class="nav-item">
                            <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                                    id="tab-{{ translation.language.code }}" 
                                    data-bs-toggle="tab" 
                                    data-bs-target="#content-{{ translation.language.code }}" 
                                    type="button">
                                {{ translation.language.name }}
                                {% if translation.language.isDefault %}
                                <i class="fas fa-star text-warning ms-1" title="{{ 'admin.common.default_language'|trans }}"></i>
                                {% endif %}
                            </button>
                        </li>
                        {% endfor %}
                    </ul>

                    <div class="tab-content mt-3" id="languageTabsContent">
                        {% for translation in category.translations %}
                        <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                             id="content-{{ translation.language.code }}">
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>{{ 'admin.category.name'|trans }}</h6>
                                    <p class="text-muted">{{ translation.name ?: '-' }}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6>{{ 'admin.category.short_description'|trans }}</h6>
                                    <p class="text-muted">{{ translation.shortDescription ?: '-' }}</p>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12">
                                    <h6>{{ 'admin.category.description'|trans }}</h6>
                                    {% if translation.description %}
                                        <div class="border rounded p-3 bg-light">
                                            {{ translation.description|nl2br }}
                                        </div>
                                    {% else %}
                                        <p class="text-muted">-</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            {{ 'admin.category.no_translations_found'|trans }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Statistiques -->
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0">{{ 'admin.category.statistics'|trans }}</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border rounded p-2">
                                <div class="h5 mb-1 text-primary">{{ category.translations|length }}</div>
                                <small class="text-muted">{{ 'admin.category.translations_count'|trans }}</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-2">
                                <div class="h5 mb-1 text-success">{{ category.products|length }}</div>
                                <small class="text-muted">{{ 'admin.category.products_count'|trans }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">{{ 'admin.common.actions'|trans }}</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>{{ 'admin.common.edit'|trans }}
                        </a>
                        
                        {% if category.products|length == 0 %}
                        <form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" 
                              onsubmit="return confirm('{{ 'admin.category.delete_confirmation'|trans }}')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fas fa-trash me-2"></i>{{ 'admin.category.delete_category'|trans }}
                            </button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Historique -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">{{ 'admin.common.history'|trans }}</h6>
                </div>
                <div class="card-body">
                    <div class="small text-muted">
                        <div class="mb-2">
                            <i class="fas fa-plus me-1"></i>
                            <strong>{{ 'admin.category.created'|trans }}:</strong><br>
                            {{ category.createdAt ? category.createdAt|date('d/m/Y H:i') : '-' }}
                        </div>
                        <div>
                            <i class="fas fa-edit me-1"></i>
                            <strong>{{ 'admin.category.last_modified'|trans }}:</strong><br>
                            {{ category.updatedAt ? category.updatedAt|date('d/m/Y H:i') : '-' }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Simple tab switching functionality
    const tabButtons = document.querySelectorAll('#languageTabs button');
    tabButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Remove active class from all tabs and panes
            tabButtons.forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-pane').forEach(pane => {
                pane.classList.remove('show', 'active');
            });
            
            // Add active class to clicked tab
            this.classList.add('active');
            
            // Show corresponding pane
            const targetId = this.getAttribute('data-bs-target');
            const targetPane = document.querySelector(targetId);
            if (targetPane) {
                targetPane.classList.add('show', 'active');
            }
        });
    });
});
</script>
{% endblock %}