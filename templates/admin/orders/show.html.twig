{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'order.details_title'|trans({'%order_number%': order.orderNumber}, 'admin') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-file-invoice"></i> {{ 'order.title'|trans({}, 'admin') }} {{ order.orderNumber }}
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'order.breadcrumb.dashboard'|trans({}, 'admin') }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_orders_index') }}">{{ 'order.breadcrumb.orders'|trans({}, 'admin') }}</a></li>
                    <li class="breadcrumb-item active">{{ order.orderNumber }}</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="{{ path('admin_orders_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> {{ 'order.back_to_list'|trans({}, 'admin') }}
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Order Details -->
        <div class="col-lg-8">
            <!-- Order Status Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> {{ 'order.info.status_and_info'|trans({}, 'admin') }}
                    </h6>
                    <span class="badge status-badge status-{{ order.status }}">
                        {{ ('order.status.' ~ order.status)|trans({}, 'admin') }}
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>{{ 'order.info.order_number'|trans({}, 'admin') }} :</strong> {{ order.orderNumber }}</p>
                            <p><strong>{{ 'order.info.created_at'|trans({}, 'admin') }} :</strong> {{ order.createdAt|date('d/m/Y à H:i') }}</p>
                            <p><strong>{{ 'order.info.updated_at'|trans({}, 'admin') }} :</strong> {{ order.updatedAt|date('d/m/Y à H:i') }}</p>
                        </div>
                        <div class="col-md-6">
                            {% if order.approvedAt %}
                                <p><strong>{{ 'order.info.approved_at'|trans({}, 'admin') }} :</strong> {{ order.approvedAt|date('d/m/Y à H:i') }}</p>
                            {% endif %}
                            {% if order.approvedBy %}
                                <p><strong>{{ 'order.info.approved_by'|trans({}, 'admin') }} :</strong> {{ order.approvedBy.email }}</p>
                            {% endif %}
                            {% if order.paidAt %}
                                <p><strong>{{ 'order.info.paid_at'|trans({}, 'admin') }} :</strong> {{ order.paidAt|date('d/m/Y à H:i') }}</p>
                            {% endif %}
                        </div>
                    </div>

                    {% if order.rejectionReason %}
                        <div class="alert alert-danger mt-3">
                            <strong><i class="fas fa-times-circle"></i> {{ 'order.info.rejection_reason'|trans({}, 'admin') }} :</strong><br>
                            {{ order.rejectionReason }}
                        </div>
                    {% endif %}

                    {% if order.clientNotes %}
                        <div class="alert alert-info mt-3">
                            <strong><i class="fas fa-sticky-note"></i> {{ 'order.info.client_notes'|trans({}, 'admin') }} :</strong><br>
                            {{ order.clientNotes|nl2br }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Client Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user"></i> {{ 'order.client.title'|trans({}, 'admin') }}
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>{{ 'order.client.name'|trans({}, 'admin') }} :</strong> {{ order.clientName }}</p>
                            <p><strong>{{ 'order.client.email'|trans({}, 'admin') }} :</strong> <a href="mailto:{{ order.clientEmail }}">{{ order.clientEmail }}</a></p>
                        </div>
                        <div class="col-md-6">
                            {% if order.clientPhone %}
                                <p><strong>{{ 'order.client.phone'|trans({}, 'admin') }} :</strong> <a href="tel:{{ order.clientPhone }}">{{ order.clientPhone }}</a></p>
                            {% endif %}
                            {% if order.clientAddress %}
                                <p><strong>{{ 'order.client.address'|trans({}, 'admin') }} :</strong><br>{{ order.clientAddress|nl2br }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-shopping-bag"></i> {{ 'order.items.title'|trans({}, 'admin') }}
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>{{ 'order.items.product'|trans({}, 'admin') }}</th>
                                    <th>{{ 'order.items.quantity'|trans({}, 'admin') }}</th>
                                    <th>{{ 'order.items.unit_price'|trans({}, 'admin') }}</th>
                                    <th>{{ 'order.items.options'|trans({}, 'admin') }}</th>
                                    <th class="text-end">{{ 'order.items.total'|trans({}, 'admin') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in order_items %}
                                    <tr>
                                        <td>
                                            <strong>{{ item.productName }}</strong>
                                            {% if item.product and item.product.description %}
                                                <br><small class="text-muted">{{ item.product.description|slice(0, 100) }}{% if item.product.description|length > 100 %}...{% endif %}</small>
                                            {% endif %}
                                        </td>
                                        <td>{{ item.quantity }}</td>
                                        <td>{{ item.unitPrice|number_format(0, ',', ' ') }} €</td>
                                        <td>
                                            {% if item.selectedOptions %}
                                                <small>{{ item.selectedOptions|nl2br }}</small>
                                            {% else %}
                                                <small class="text-muted">{{ 'order.items.none'|trans({}, 'admin') }}</small>
                                            {% endif %}
                                        </td>
                                        <td class="text-end"><strong>{{ item.totalPrice|number_format(0, ',', ' ') }} €</strong></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>{{ 'order.items.subtotal'|trans({}, 'admin') }} :</strong></td>
                                    <td class="text-end"><strong>{{ order.subtotal|number_format(0, ',', ' ') }} €</strong></td>
                                </tr>
                                <tr class="table-success">
                                    <td colspan="4" class="text-end"><strong>{{ 'order.items.total'|trans({}, 'admin') }} :</strong></td>
                                    <td class="text-end"><strong>{{ order.total|number_format(0, ',', ' ') }} €</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Actions -->
        <div class="col-lg-4">
            <!-- Payment Information Card -->
            {% if order.paymentProof %}
                <div class="card shadow mb-4 border-success">
                    <div class="card-header bg-success text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-receipt"></i> {{ 'order.payment.title'|trans({}, 'admin') }}
                        </h6>
                    </div>
                    <div class="card-body text-center">
                        <i class="fas fa-file-invoice fa-3x text-success mb-3"></i>
                        <p class="mb-3">{{ 'order.payment.proof_uploaded'|trans({}, 'admin') }}</p>
                        <a href="{{ path('admin_order_download_payment_proof', {id: order.id}) }}" 
                           class="btn btn-success" target="_blank">
                            <i class="fas fa-download"></i> {{ 'order.payment.download_proof'|trans({}, 'admin') }}
                        </a>
                        
                        {% if order.status == 'approved' and order.paymentProof %}
                            <form action="{{ path('admin_order_mark_paid', {id: order.id}) }}" 
                                  method="POST" class="mt-3"
                                  onsubmit="return confirm('{{ 'order.payment.confirm_paid'|trans({}, 'admin') }}')">
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-check-circle"></i> {{ 'order.payment.mark_as_paid'|trans({}, 'admin') }}
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            {% elseif order.status in ['approved', 'pending'] %}
                <div class="card shadow mb-4 border-warning">
                    <div class="card-header bg-warning py-3">
                        <h6 class="m-0 font-weight-bold text-dark">
                            <i class="fas fa-clock"></i> {{ 'order.payment.waiting_title'|trans({}, 'admin') }}
                        </h6>
                    </div>
                    <div class="card-body text-center">
                        <i class="fas fa-hourglass-half fa-3x text-warning mb-3"></i>
                        <p>{{ 'order.payment.waiting_message'|trans({}, 'admin') }}</p>
                    </div>
                </div>
            {% endif %}

            <!-- Status Actions Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-tasks"></i> {{ 'order.actions.title'|trans({}, 'admin') }}
                    </h6>
                </div>
                <div class="card-body">
                    {% if order.status == 'pending' %}
                        <form action="{{ path('admin_order_approve', {id: order.id}) }}" method="POST" class="mb-2"
                              onsubmit="return confirm('{{ 'order.actions.confirm_approve'|trans({}, 'admin') }}')">
                            <button type="submit" class="btn btn-success btn-block">
                                <i class="fas fa-check"></i> {{ 'order.actions.approve'|trans({}, 'admin') }}
                            </button>
                        </form>
                        <button type="button" class="btn btn-danger btn-block" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            <i class="fas fa-times"></i> {{ 'order.actions.reject'|trans({}, 'admin') }}
                        </button>
                    {% endif %}

                    {% if order.status == 'rejected' %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> {{ 'order.actions.rejected_warning'|trans({}, 'admin') }}
                        </div>
                        <button type="button" class="btn btn-primary btn-block" data-bs-toggle="modal" data-bs-target="#reopenModal">
                            <i class="fas fa-redo"></i> {{ 'order.actions.reopen'|trans({}, 'admin') }}
                        </button>
                    {% endif %}

                    {% if order.status in ['pending', 'approved'] %}
                        <form action="{{ path('admin_order_send_reminder', {id: order.id}) }}" method="POST" class="mt-2"
                              onsubmit="return confirm('{{ 'order.actions.confirm_reminder'|trans({'%email%': order.clientEmail}, 'admin') }}')">
                            <button type="submit" class="btn btn-warning btn-block">
                                <i class="fas fa-bell"></i> {{ 'order.actions.send_reminder'|trans({}, 'admin') }}
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>

            <!-- Status Transition Card -->
            {% set allowedStatuses = order.getAllowedNextStatuses() %}
            {% if allowedStatuses|length > 0 %}
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-exchange-alt"></i> {{ 'order.status_change.title'|trans({}, 'admin') }}
                        </h6>
                    </div>
                    <div class="card-body">
                        <form id="statusChangeForm">
                            <div class="mb-3">
                                <label for="newStatus" class="form-label">{{ 'order.status_change.new_status'|trans({}, 'admin') }} :</label>
                                <select name="status" id="newStatus" class="form-select">
                                    <option value="">{{ 'order.status_change.select'|trans({}, 'admin') }}</option>
                                    {% for allowedStatus in allowedStatuses %}
                                        <option value="{{ allowedStatus }}">
                                            {{ ('order.status.' ~ allowedStatus)|trans({}, 'admin') }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-save"></i> {{ 'order.status_change.update'|trans({}, 'admin') }}
                            </button>
                        </form>
                        <div id="statusMessage" class="mt-3" style="display: none;"></div>
                    </div>
                </div>
            {% else %}
                <div class="card shadow mb-4 border-secondary">
                    <div class="card-header bg-secondary text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-lock"></i> {{ 'order.final_status.title'|trans({}, 'admin') }}
                        </h6>
                    </div>
                    <div class="card-body text-center">
                        <p class="mb-0">{{ 'order.final_status.message'|trans({}, 'admin') }}</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'order.reject_modal.title'|trans({}, 'admin') }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('admin_order_reject', {id: order.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> {{ 'order.reject_modal.warning'|trans({}, 'admin') }}
                    </div>
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">{{ 'order.reject_modal.reason_label'|trans({}, 'admin') }} :</label>
                        <textarea name="rejection_reason" id="rejectionReason" 
                                  class="form-control" rows="4" required
                                  placeholder="{{ 'order.reject_modal.reason_placeholder'|trans({}, 'admin') }}"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'order.reject_modal.cancel'|trans({}, 'admin') }}</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> {{ 'order.reject_modal.confirm'|trans({}, 'admin') }}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reopen Modal -->
<div class="modal fade" id="reopenModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'order.reopen_modal.title'|trans({}, 'admin') }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('admin_order_reopen', {id: order.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> {{ 'order.reopen_modal.info'|trans({}, 'admin') }}
                    </div>
                    <div class="mb-3">
                        <label for="reopenReason" class="form-label">{{ 'order.reopen_modal.reason_label'|trans({}, 'admin') }} :</label>
                        <textarea name="reopen_reason" id="reopenReason" 
                                  class="form-control" rows="3" required
                                  placeholder="{{ 'order.reopen_modal.reason_placeholder'|trans({}, 'admin') }}"></textarea>
                        <small class="form-text text-muted">
                            {{ 'order.reopen_modal.reason_help'|trans({}, 'admin') }}
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'order.reopen_modal.cancel'|trans({}, 'admin') }}</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-redo"></i> {{ 'order.reopen_modal.confirm'|trans({}, 'admin') }}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Status change form handler
    const statusForm = document.getElementById('statusChangeForm');
    const statusMessage = document.getElementById('statusMessage');
    
    if (statusForm) {
        statusForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newStatus = document.getElementById('newStatus').value;
            if (!newStatus) {
                showMessage('{{ 'order.status_change.select_status'|trans({}, 'admin') }}', 'error');
                return;
            }
            
            if (!confirm('{{ 'order.status_change.confirm'|trans({}, 'admin') }}')) {
                return;
            }
            
            // Disable button during request
            const submitBtn = statusForm.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> {{ 'order.status_change.updating'|trans({}, 'admin') }}';
            
            // Send AJAX request
            fetch('{{ path('admin_order_update_status', {id: order.id}) }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'status=' + encodeURIComponent(newStatus)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showMessage(data.message || '{{ 'order.status_change.success'|trans({}, 'admin') }}', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showMessage(data.error || '{{ 'order.status_change.error'|trans({}, 'admin') }}', 'error');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-save"></i> {{ 'order.status_change.update'|trans({}, 'admin') }}';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showMessage('{{ 'order.status_change.connection_error'|trans({}, 'admin') }}', 'error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-save"></i> {{ 'order.status_change.update'|trans({}, 'admin') }}';
            });
        });
    }
    
    function showMessage(message, type) {
        statusMessage.className = 'mt-3 alert alert-' + (type === 'success' ? 'success' : 'danger');
        statusMessage.textContent = message;
        statusMessage.style.display = 'block';
    }
});
</script>

<style>
.status-badge {
    font-size: 0.9rem;
    padding: 0.5rem 1rem;
}

.status-pending { background-color: #fff3cd; color: #856404; }
.status-approved { background-color: #d1ecf1; color: #0c5460; }
.status-paid { background-color: #d4edda; color: #155724; }
.status-processing { background-color: #f8d7da; color: #721c24; }
.status-shipped { background-color: #d1ecf1; color: #0c5460; }
.status-delivered { background-color: #d4edda; color: #155724; }
.status-rejected { background-color: #f8d7da; color: #721c24; }
.status-cancelled { background-color: #f8d7da; color: #721c24; }

.btn-block {
    display: block;
    width: 100%;
}

.card-header.bg-success,
.card-header.bg-warning,
.card-header.bg-secondary {
    border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;
}

.shadow {
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}
</style>
{% endblock %}
