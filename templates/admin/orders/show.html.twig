{% extends 'admin/base.html.twig' %}

{% block title %}Détails de la commande {{ order.orderNumber }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-file-invoice"></i> Commande {{ order.orderNumber }}
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Tableau de bord</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin_orders_index') }}">Commandes</a></li>
                    <li class="breadcrumb-item active">{{ order.orderNumber }}</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="{{ path('admin_orders_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Order Details -->
        <div class="col-lg-8">
            <!-- Order Status Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle"></i> Statut et informations
                    </h6>
                    <span class="badge status-badge status-{{ order.status }}">
                        {% if order.status == 'pending' %}En attente{% endif %}
                        {% if order.status == 'approved' %}Approuvée{% endif %}
                        {% if order.status == 'rejected' %}Rejetée{% endif %}
                        {% if order.status == 'paid' %}Payée{% endif %}
                        {% if order.status == 'processing' %}En production{% endif %}
                        {% if order.status == 'shipped' %}Expédiée{% endif %}
                        {% if order.status == 'delivered' %}Livrée{% endif %}
                        {% if order.status == 'cancelled' %}Annulée{% endif %}
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Numéro de commande :</strong> {{ order.orderNumber }}</p>
                            <p><strong>Date de création :</strong> {{ order.createdAt|date('d/m/Y à H:i') }}</p>
                            <p><strong>Dernière mise à jour :</strong> {{ order.updatedAt|date('d/m/Y à H:i') }}</p>
                        </div>
                        <div class="col-md-6">
                            {% if order.approvedAt %}
                                <p><strong>Approuvée le :</strong> {{ order.approvedAt|date('d/m/Y à H:i') }}</p>
                            {% endif %}
                            {% if order.approvedBy %}
                                <p><strong>Approuvée par :</strong> {{ order.approvedBy.email }}</p>
                            {% endif %}
                            {% if order.paidAt %}
                                <p><strong>Payée le :</strong> {{ order.paidAt|date('d/m/Y à H:i') }}</p>
                            {% endif %}
                        </div>
                    </div>

                    {% if order.rejectionReason %}
                        <div class="alert alert-danger mt-3">
                            <strong><i class="fas fa-times-circle"></i> Motif de rejet :</strong><br>
                            {{ order.rejectionReason }}
                        </div>
                    {% endif %}

                    {% if order.clientNotes %}
                        <div class="alert alert-info mt-3">
                            <strong><i class="fas fa-sticky-note"></i> Notes du client :</strong><br>
                            {{ order.clientNotes|nl2br }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Client Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user"></i> Informations client
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Nom :</strong> {{ order.clientName }}</p>
                            <p><strong>Email :</strong> <a href="mailto:{{ order.clientEmail }}">{{ order.clientEmail }}</a></p>
                        </div>
                        <div class="col-md-6">
                            {% if order.clientPhone %}
                                <p><strong>Téléphone :</strong> <a href="tel:{{ order.clientPhone }}">{{ order.clientPhone }}</a></p>
                            {% endif %}
                            {% if order.clientAddress %}
                                <p><strong>Adresse :</strong><br>{{ order.clientAddress|nl2br }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-shopping-bag"></i> Articles commandés
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th>Quantité</th>
                                    <th>Prix unitaire</th>
                                    <th>Options</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in order_items %}
                                    <tr>
                                        <td>
                                            <strong>{{ item.productName }}</strong>
                                            {% if item.productDescription %}
                                                <br><small class="text-muted">{{ item.productDescription }}</small>
                                            {% endif %}
                                        </td>
                                        <td>{{ item.quantity }}</td>
                                        <td>{{ item.unitPrice|number_format(0, ',', ' ') }} €</td>
                                        <td>
                                            {% if item.selectedOptions %}
                                                <small>{{ item.selectedOptions|nl2br }}</small>
                                            {% else %}
                                                <small class="text-muted">Aucune</small>
                                            {% endif %}
                                        </td>
                                        <td class="text-end"><strong>{{ item.totalPrice|number_format(0, ',', ' ') }} €</strong></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Sous-total :</strong></td>
                                    <td class="text-end"><strong>{{ order.subtotal|number_format(0, ',', ' ') }} €</strong></td>
                                </tr>
                                <tr class="table-success">
                                    <td colspan="4" class="text-end"><strong>Total :</strong></td>
                                    <td class="text-end"><strong>{{ order.total|number_format(0, ',', ' ') }} €</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Actions -->
        <div class="col-lg-4">
            <!-- Payment Information Card -->
            {% if order.paymentProof %}
                <div class="card shadow mb-4 border-success">
                    <div class="card-header bg-success text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-receipt"></i> Justificatif de paiement
                        </h6>
                    </div>
                    <div class="card-body text-center">
                        <i class="fas fa-file-invoice fa-3x text-success mb-3"></i>
                        <p class="mb-3">Un justificatif de paiement a été téléchargé.</p>
                        <a href="{{ path('admin_order_download_payment_proof', {id: order.id}) }}" 
                           class="btn btn-success" target="_blank">
                            <i class="fas fa-download"></i> Télécharger le justificatif
                        </a>
                        
                        {% if order.status == 'approved' and order.paymentProof %}
                            <form action="{{ path('admin_order_mark_paid', {id: order.id}) }}" 
                                  method="POST" class="mt-3"
                                  onsubmit="return confirm('Confirmer que le paiement a été reçu et validé ?')">
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-check-circle"></i> Marquer comme payée
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            {% elseif order.status in ['approved', 'pending'] %}
                <div class="card shadow mb-4 border-warning">
                    <div class="card-header bg-warning py-3">
                        <h6 class="m-0 font-weight-bold text-dark">
                            <i class="fas fa-clock"></i> En attente de paiement
                        </h6>
                    </div>
                    <div class="card-body text-center">
                        <i class="fas fa-hourglass-half fa-3x text-warning mb-3"></i>
                        <p>Le client n'a pas encore téléchargé de justificatif de paiement.</p>
                    </div>
                </div>
            {% endif %}

            <!-- Status Actions Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-tasks"></i> Actions rapides
                    </h6>
                </div>
                <div class="card-body">
                    {% if order.status == 'pending' %}
                        <form action="{{ path('admin_order_approve', {id: order.id}) }}" method="POST" class="mb-2"
                              onsubmit="return confirm('Approuver cette commande ?')">
                            <button type="submit" class="btn btn-success btn-block">
                                <i class="fas fa-check"></i> Approuver la commande
                            </button>
                        </form>
                        <button type="button" class="btn btn-danger btn-block" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            <i class="fas fa-times"></i> Rejeter la commande
                        </button>
                    {% endif %}

                    {% if order.status == 'rejected' %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> Cette commande a été rejetée.
                        </div>
                        <button type="button" class="btn btn-primary btn-block" data-bs-toggle="modal" data-bs-target="#reopenModal">
                            <i class="fas fa-redo"></i> Réouvrir la commande
                        </button>
                    {% endif %}

                    {% if order.status in ['pending', 'approved'] %}
                        <form action="{{ path('admin_order_send_reminder', {id: order.id}) }}" method="POST" class="mt-2"
                              onsubmit="return confirm('Envoyer un rappel de paiement à {{ order.clientEmail }} ?')">
                            <button type="submit" class="btn btn-warning btn-block">
                                <i class="fas fa-bell"></i> Envoyer rappel de paiement
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>

            <!-- Status Transition Card -->
            {% set allowedStatuses = order.getAllowedNextStatuses() %}
            {% if allowedStatuses|length > 0 %}
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-exchange-alt"></i> Changer le statut
                        </h6>
                    </div>
                    <div class="card-body">
                        <form id="statusChangeForm">
                            <div class="mb-3">
                                <label for="newStatus" class="form-label">Nouveau statut :</label>
                                <select name="status" id="newStatus" class="form-select">
                                    <option value="">-- Sélectionner --</option>
                                    {% for allowedStatus in allowedStatuses %}
                                        <option value="{{ allowedStatus }}">
                                            {% if allowedStatus == 'pending' %}En attente{% endif %}
                                            {% if allowedStatus == 'approved' %}Approuvée{% endif %}
                                            {% if allowedStatus == 'rejected' %}Rejetée{% endif %}
                                            {% if allowedStatus == 'paid' %}Payée{% endif %}
                                            {% if allowedStatus == 'processing' %}En production{% endif %}
                                            {% if allowedStatus == 'shipped' %}Expédiée{% endif %}
                                            {% if allowedStatus == 'delivered' %}Livrée{% endif %}
                                            {% if allowedStatus == 'cancelled' %}Annulée{% endif %}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-save"></i> Mettre à jour le statut
                            </button>
                        </form>
                        <div id="statusMessage" class="mt-3" style="display: none;"></div>
                    </div>
                </div>
            {% else %}
                <div class="card shadow mb-4 border-secondary">
                    <div class="card-header bg-secondary text-white py-3">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-lock"></i> Statut final
                        </h6>
                    </div>
                    <div class="card-body text-center">
                        <p class="mb-0">Cette commande est dans un état final. Aucune transition n'est possible.</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rejeter la commande</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('admin_order_reject', {id: order.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Attention : Cette action enverra un email au client.
                    </div>
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Motif du rejet :</label>
                        <textarea name="rejection_reason" id="rejectionReason" 
                                  class="form-control" rows="4" required
                                  placeholder="Expliquez au client pourquoi sa commande est rejetée..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times"></i> Rejeter la commande
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reopen Modal -->
<div class="modal fade" id="reopenModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Réouvrir la commande</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="{{ path('admin_order_reopen', {id: order.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> La commande sera remise en statut "En attente".
                    </div>
                    <div class="mb-3">
                        <label for="reopenReason" class="form-label">Motif de la réouverture :</label>
                        <textarea name="reopen_reason" id="reopenReason" 
                                  class="form-control" rows="3" required
                                  placeholder="Pourquoi réouvrez-vous cette commande ?"></textarea>
                        <small class="form-text text-muted">
                            Ce motif sera ajouté aux notes internes de la commande.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-redo"></i> Réouvrir la commande
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Status change form handler
    const statusForm = document.getElementById('statusChangeForm');
    const statusMessage = document.getElementById('statusMessage');
    
    if (statusForm) {
        statusForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newStatus = document.getElementById('newStatus').value;
            if (!newStatus) {
                showMessage('Veuillez sélectionner un statut', 'error');
                return;
            }
            
            if (!confirm('Êtes-vous sûr de vouloir changer le statut de cette commande ?')) {
                return;
            }
            
            // Disable button during request
            const submitBtn = statusForm.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Mise à jour...';
            
            // Send AJAX request
            fetch('{{ path('admin_order_update_status', {id: order.id}) }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: 'status=' + encodeURIComponent(newStatus)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showMessage(data.message || 'Statut mis à jour avec succès', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showMessage(data.error || 'Une erreur est survenue', 'error');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-save"></i> Mettre à jour le statut';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showMessage('Erreur de connexion au serveur', 'error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-save"></i> Mettre à jour le statut';
            });
        });
    }
    
    function showMessage(message, type) {
        statusMessage.className = 'mt-3 alert alert-' + (type === 'success' ? 'success' : 'danger');
        statusMessage.textContent = message;
        statusMessage.style.display = 'block';
    }
});
</script>

<style>
.status-badge {
    font-size: 0.9rem;
    padding: 0.5rem 1rem;
}

.status-pending { background-color: #fff3cd; color: #856404; }
.status-approved { background-color: #d1ecf1; color: #0c5460; }
.status-paid { background-color: #d4edda; color: #155724; }
.status-processing { background-color: #f8d7da; color: #721c24; }
.status-shipped { background-color: #d1ecf1; color: #0c5460; }
.status-delivered { background-color: #d4edda; color: #155724; }
.status-rejected { background-color: #f8d7da; color: #721c24; }
.status-cancelled { background-color: #f8d7da; color: #721c24; }

.btn-block {
    display: block;
    width: 100%;
}

.card-header.bg-success,
.card-header.bg-warning,
.card-header.bg-secondary {
    border-radius: calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0;
}

.shadow {
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}
</style>
{% endblock %}
