                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.code, {
                                'attr': {'class': 'form-control form-control-lg', 'placeholder': ('admin.product.code_placeholder'|trans({}, 'admin'))},
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.category, {
                                'attr': {'class': 'form-select'},
