                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        {{ 'admin.product.available_options_description'|trans({}, 'admin') }}
                    </div>
                    
                    {% set optionGroups = get_option_groups() %}
                    
                    {% if optionGroups|length > 0 %}
