                                                  placeholder="{{ ('admin.product.description_placeholder'|trans({}, 'admin'))|replace({'%language%': language.name}) }}"></textarea>
                                        <div class="form-text">
                                            {{ 'admin.product.description_info'|trans({}, 'admin') }}
