{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.product.title'|trans({}, 'admin') }} - MODUSCAP{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">{{ 'admin.product.list_title'|trans({}, 'admin') }}</h1>
            <p class="text-muted">{{ 'admin.product.description'|trans({}, 'admin') }}</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('admin_product_new') }}" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>{{ 'admin.common.create'|trans({}, 'admin') }} {{ 'admin.product.title'|trans({}, 'admin') }}
            </a>
            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#filters">
                <i class="fas fa-filter me-2"></i>{{ 'admin.filter.title'|trans({}, 'admin') }}
            </button>
        </div>
    </div>

    {# Filtres #}
    <div class="collapse {{ current_search or current_category ? 'show' : '' }} mb-4" id="filters">
        <div class="card card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label">{{ 'admin.common.search'|trans({}, 'admin') }}</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="{{ current_search }}" placeholder="{{ 'admin.filter.search_placeholder'|trans({}, 'admin') }}">
                </div>
                <div class="col-md-4">
                    <label for="category" class="form-label">{{ 'admin.product.category'|trans({}, 'admin') }}</label>
                    <select class="form-select" id="category" name="category">
                        <option value="">Toutes les catégories</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {{ current_category == category.id ? 'selected' : '' }}>
                                {{ category.name }} ({{ category.code }})
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="w-100">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i>Filtrer
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {# Statistiques rapides #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">{{ products|length }}</div>
                            <div class="small">Produits affichés</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-box fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">{{ products|filter(p => p.isActive)|length }}</div>
                            <div class="small">Produits actifs</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">{{ products|filter(p => p.basePrice)|length }}</div>
                            <div class="small">Avec prix</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-euro-sign fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="h4 mb-0">{{ categories|length }}</div>
                            <div class="small">{{ 'admin.product.category'|trans({}, 'admin') }}</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tags fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Liste des produits #}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des Produits</h5>
            <div class="d-flex gap-2">
                <select class="form-select form-select-sm" id="bulkAction">
                    <option value="">{{ 'admin.common.grouped_actions'|trans({}, 'admin') }}</option>
                    <option value="activate">{{ 'admin.common.activate'|trans({}, 'admin') }}</option>
                    <option value="deactivate">{{ 'admin.common.deactivate'|trans({}, 'admin') }}</option>
                    <option value="delete">{{ 'admin.common.delete'|trans({}, 'admin') }}</option>
                </select>
                <button class="btn btn-sm btn-outline-primary" onclick="exportProducts()">
                    <i class="fas fa-download me-1"></i>Exporter
                </button>
            </div>
        </div>
        <div class="card-body">
            {% if products %}
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th width="40">
                                    <input type="checkbox" class="form-check-input" id="selectAll">
                                </th>
                                <th>{{ 'admin.product.code'|trans({}, 'admin') }}</th>
                                <th>{{ 'admin.product.name'|trans({}, 'admin') }}</th>
                                <th>{{ 'admin.product.category'|trans({}, 'admin') }}</th>
                                <th>{{ 'admin.product.base_price'|trans({}, 'admin') }}</th>
                                <th>{{ 'admin.product.status'|trans({}, 'admin') }}</th>
                                <th>{{ 'admin.product.is_featured'|trans({}, 'admin') }}</th>
                                <th>{{ 'admin.common.creation_date'|trans({}, 'admin') }}</th>
                                <th width="150">{{ 'admin.common.actions'|trans({}, 'admin') }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                                <tr>
                                    <td>
                                        <input type="checkbox" class="form-check-input product-checkbox" 
                                               value="{{ product.id }}">
                                    </td>
                                    <td>
                                        <strong>{{ product.code }}</strong>
                                    </td>
                                    <td>
                                        {% set frenchName = product.translations|filter(t => t.language.code == 'fr')|first %}
                                        {% if frenchName %}
                                            <span class="text-truncate d-inline-block" style="max-width: 200px;" 
                                                  title="{{ frenchName.name }}">
                                                {{ frenchName.name }}
                                            </span>
                                        {% else %}
                                            <em class="text-muted">Sans traduction FR</em>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{ product.category.name }}</span>
                                    </td>
                                    <td>
                                        {% if product.basePrice %}
                                            <strong>{{ product.basePrice|number_format(2, ',', ' ') }} €</strong>
                                        {% else %}
                                            <span class="text-muted">Non défini</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if product.isActive %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if product.isFeatured %}
                                            <span class="badge bg-warning">Mis en avant</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ product.createdAt ? product.createdAt|date('d/m/Y') : '' }}
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('admin_product_show', {'id': product.id}) }}" 
                                               class="btn btn-outline-primary" title="{{ 'admin.common.view'|trans({}, 'admin') }}">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_product_edit', {'id': product.id}) }}" 
                                               class="btn btn-outline-warning" title="{{ 'admin.common.edit'|trans({}, 'admin') }}">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" 
                                                    onclick="confirmDelete({{ product.id }})" title="{{ 'admin.common.delete'|trans({}, 'admin') }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-box fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucun produit trouvé</h5>
                    <p class="text-muted">
                        {% if current_search or current_category %}
                            Aucun produit ne correspond à vos critères de recherche.
                        {% else %}
                            Commencez par créer votre premier produit.
                        {% endif %}
                    </p>
                    {% if current_search or current_category %}
                        <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Effacer les filtres
                        </a>
                    {% else %}
                        <a href="{{ path('admin_product_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Créer un produit
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

{# Modal de confirmation de suppression #}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation de suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer ce produit ? Cette action est irréversible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'admin.common.cancel'|trans({}, 'admin') }}</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                    <button type="submit" class="btn btn-danger">{{ 'admin.common.delete'|trans({}, 'admin') }}</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_javascripts %}
{{parent()}}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sélection de tous les checkboxes
    const selectAll = document.getElementById('selectAll');
    const productCheckboxes = document.querySelectorAll('.product-checkbox');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            productCheckboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });
    }
    
    // Auto-submit du formulaire de filtrage
    const filterInputs = document.querySelectorAll('#filters input, #filters select');
    filterInputs.forEach(input => {
        input.addEventListener('change', function() {
            if (this.closest('form')) {
                this.closest('form').submit();
            }
        });
    });
});

function confirmDelete(productId) {
    const deleteForm = document.getElementById('deleteForm');
    deleteForm.action = `/admin/products/${productId}`;
    
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}

function exportProducts() {
    // Implémentation de l'export (CSV, Excel, etc.)
    alert('Fonctionnalité d\'export en cours de développement');
}

// Actions groupées
document.getElementById('bulkAction')?.addEventListener('change', function() {
    if (this.value) {
        const selectedIds = Array.from(document.querySelectorAll('.product-checkbox:checked'))
            .map(cb => cb.value);
        
        if (selectedIds.length === 0) {
            alert('Veuillez sélectionner au moins un produit.');
            this.value = '';
            return;
        }
        
        // Confirmation pour certaines actions
        if (this.value === 'delete') {
            if (!confirm('Êtes-vous sûr de vouloir supprimer les produits sélectionnés ?')) {
                this.value = '';
                return;
            }
        }
        
        // TODO: Implémenter les actions groupées côté serveur
        alert('Actions groupées en cours de développement');
        this.value = '';
    }
});
</script>
{% endblock %}