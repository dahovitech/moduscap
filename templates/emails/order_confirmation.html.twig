<!DOCTYPE html>
<html lang="{{ locale|default('fr') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'email.order_confirmation_title'|trans({'%order_number%': order_number}) }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
        }
        .email-container {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 30px 20px;
            text-align: center;
        }
        .header h1 {
            margin: 0;
            font-size: 24px;
            font-weight: bold;
        }
        .content {
            padding: 30px 20px;
        }
        .success-icon {
            font-size: 48px;
            color: #28a745;
            text-align: center;
            margin: 20px 0;
        }
        .order-info {
            background: #f8f9ff;
            border: 1px solid #e3f2fd;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
        }
        .order-number {
            font-size: 18px;
            font-weight: bold;
            color: #1976d2;
            margin-bottom: 10px;
        }
        .amount {
            font-size: 24px;
            font-weight: bold;
            color: #28a745;
            margin: 10px 0;
        }
        .next-steps {
            background: #e8f5e8;
            border: 1px solid #c3e6cb;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
        }
        .next-steps h3 {
            color: #155724;
            margin: 0 0 15px 0;
        }
        .cta-button {
            display: inline-block;
            background: #007bff;
            color: white;
            padding: 15px 30px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            margin: 20px 10px;
            text-align: center;
        }
        .footer {
            background: #f8f9fa;
            padding: 20px;
            text-align: center;
            color: #6c757d;
            font-size: 14px;
        }
        .contact-info {
            margin: 20px 0;
            padding: 15px;
            background: #e8f5e8;
            border-radius: 5px;
        }
        .highlight {
            background: #fff3cd;
            padding: 2px 6px;
            border-radius: 3px;
            font-weight: bold;
        }
        ul, ol {
            padding-left: 20px;
        }
        li {
            margin: 8px 0;
        }
        @media (max-width: 600px) {
            body {
                padding: 10px;
            }
            .content {
                padding: 20px 15px;
            }
            .header {
                padding: 20px 15px;
            }
            .cta-button {
                display: block;
                margin: 20px 0;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="header">
            <h1>âœ… {{ 'email.order_confirmed_header'|trans }}</h1>
            <p>{{ site_name }}</p>
        </div>

        <div class="content">
            <div class="success-icon">ðŸŽ‰</div>
            
            <p>{{ 'email.greeting'|trans({'%name%': client_name }) }}</p>

            <p>{{ 'email.order_confirmation_intro'|trans }}</p>

            <div class="order-info">
                <div class="order-number">{{ 'email.order_number'|trans({'%order_number%': order_number}) }}</div>
                <p><strong>{{ 'email.total_amount'|trans }}:</strong></p>
                <div class="amount">{{ total|number_format(0, ',', ' ') }} â‚¬</div>
                <p><strong>{{ 'email.order_date'|trans }}:</strong> {{ order.createdAt|date('d/m/Y Ã  H:i') }}</p>
            </div>

            <div class="next-steps">
                <h3>ðŸ”„ {{ 'email.next_steps'|trans }}</h3>
                <p>{{ 'email.next_steps_intro'|trans }}</p>
                <ol>
                    <li><strong>{{ 'email.step_1_title'|trans }}</strong> - {{ 'email.step_1_description'|trans }}</li>
                    <li><strong>{{ 'email.step_2_title'|trans }}</strong> - {{ 'email.step_2_description'|trans }}</li>
                    <li><strong>{{ 'email.step_3_title'|trans }}</strong> - {{ 'email.step_3_description'|trans }}</li>
                    <li><strong>{{ 'email.step_4_title'|trans }}</strong> - {{ 'email.step_4_description'|trans }}</li>
                </ol>
            </div>

            <p><strong>{{ 'email.what_to_do_now'|trans }}</strong></p>
            <ul>
                <li>{{ 'email.monitor_email_for_updates'|trans }}</li>
                <li>{{ 'email.prepare_payment_info'|trans }}</li>
                <li>{{ 'email.contact_us_with_questions'|trans }}</li>
            </ul>

            <center>
