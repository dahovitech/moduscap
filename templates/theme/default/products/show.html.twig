{% extends '@theme/base.html.twig' %}

{% block title %}{{ setting('siteName') }} - {{ product.getName(app.request.locale) }}{% endblock %}

{% block body %}
  <!-- Product Header -->
  <section class="section">
    <div class="container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('app_homepage', {'_locale': app.request.locale}) }}">{{ 'nav.home'|trans({}, 'default') }}</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_products_index', {'_locale': app.request.locale}) }}">{{ 'nav.products'|trans({}, 'default') }}</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{ product.getName(app.request.locale) }}</li>
        </ol>
      </nav>

      <div class="row">
        <!-- Product Images -->
        <div class="col-lg-7">
          {% set galleryImages = product.galleryImages %}
          {% if product.mainImage or galleryImages|length > 0 %}
            <div id="productCarousel" class="carousel slide shadow rounded" data-bs-ride="carousel">
              <div class="carousel-indicators">
                {% if product.mainImage %}
                  <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
                {% endif %}
                {% for image in galleryImages %}
                  <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="{{ loop.index }}" aria-label="Slide {{ loop.index + 1 }}"></button>
                {% endfor %}
              </div>
              <div class="carousel-inner rounded">
                {% if product.mainImage %}
                  <div class="carousel-item active">
                    <img src="{{ asset('uploads/media/' ~ product.mainImage.filename) }}" class="d-block w-100" alt="{{ product.getName(app.request.locale) }}">
                  </div>
                {% endif %}
                {% for image in galleryImages %}
                  <div class="carousel-item {% if not product.mainImage and loop.first %}active{% endif %}">
                    <img src="{{ asset('uploads/media/' ~ image.filename) }}" class="d-block w-100" alt="{{ product.getName(app.request.locale) }}">
                  </div>
                {% endfor %}
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">{{ 'common.previous'|trans({}, 'default') }}</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">{{ 'common.next'|trans({}, 'default') }}</span>
              </button>
            </div>
          {% else %}
            <img src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=800&h=600&fit=crop" 
                 class="img-fluid rounded shadow" alt="{{ product.getName(app.request.locale) }}">
          {% endif %}
        </div>

        <!-- Product Info -->
        <div class="col-lg-5">
          <h1 class="mb-3">{{ product.getName(app.request.locale) }}</h1>
          
          {% if product.basePrice %}
            <div class="mb-4">
              <span class="h2 text-primary">{{ product.basePrice|number_format(0, ',', ' ') }}€</span>
              <span class="text-muted">{{ 'products.starting_from'|trans({}, 'default') }}</span>
            </div>
          {% endif %}

          <div class="card mb-4 bg-light">
            <div class="card-body">
              <h3 class="h5 mb-3">{{ 'products.show.specifications'|trans({}, 'default') }}</h3>
              <div class="row g-3">
                <div class="col-6">
                  <div class="d-flex align-items-center">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" class="text-primary me-2">
                      <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z"/>
                    </svg>
                    <div>
                      <div class="small text-muted">{{ 'products.show.surface'|trans({}, 'default') }}</div>
                      <div class="fw-bold">{{ product.surface ? product.surface : '90' }} m²</div>
                    </div>
                  </div>
                </div>
                
                <div class="col-6">
                  <div class="d-flex align-items-center">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" class="text-primary me-2">
                      <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                    </svg>
                    <div>
                      <div class="small text-muted">{{ 'products.show.bedrooms_label'|trans({}, 'default') }}</div>
                      <div class="fw-bold">{{ product.rooms ? product.rooms : '2' }}</div>
                    </div>
                  </div>
                </div>
                
                <div class="col-6">
                  <div class="d-flex align-items-center">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" class="text-primary me-2">
                      <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                    </svg>
                    <div>
                      <div class="small text-muted">{{ 'products.show.bathrooms_label'|trans({}, 'default') }}</div>
                      <div class="fw-bold">1</div>
                    </div>
                  </div>
                </div>
                
                <div class="col-6">
                  <div class="d-flex align-items-center">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" class="text-primary me-2">
                      <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492zM5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0z"/>
                      <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52l-.094-.319zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115l.094-.319z"/>
                    </svg>
                    <div>
                      <div class="small text-muted">{{ 'products.show.delivery'|trans({}, 'default') }}</div>
                      <div class="fw-bold">90 {{ 'quote.form.months'|trans({}, 'default') }}</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Customization Form -->
          {% if grouped_options is defined and grouped_options|length > 0 %}
            <div class="card mb-4 border-primary">
              <div class="card-header bg-primary text-white">
                <h3 class="h5 mb-0">{{ 'products.show.customize_title'|trans({}, 'default') }}</h3>
              </div>
              <div class="card-body">
                <form id="customization-form" method="post">
                  <!-- Options Selection -->
                  {% for group in grouped_options %}
                    <div class="mb-4">
                      <h5 class="mb-3">{{ group.name }}</h5>
                      {% if group.description %}
                        <p class="text-muted small">{{ group.description }}</p>
                      {% endif %}
                      
                      {% for option in group.options %}
                        <div class="form-check mb-2">
                          <input class="form-check-input option-checkbox" 
                                 type="checkbox" 
                                 name="selected_options[]" 
                                 value="{{ option.code }}" 
                                 id="option_{{ option.id }}"
                                 data-price="{{ option.price }}">
                          <label class="form-check-label d-flex justify-content-between align-items-center" 
                                 for="option_{{ option.id }}">
                            <span>{{ option.name }}</span>
                            <span class="badge bg-secondary">+{{ option.price|number_format(0, ',', ' ') }}€</span>
                          </label>
                          {% if option.description %}
                            <div class="form-text ms-4">{{ option.description }}</div>
                          {% endif %}
                        </div>
                      {% endfor %}
                    </div>
                    {% if not loop.last %}<hr>{% endif %}
                  {% endfor %}

                  <!-- Quantity -->
                  <div class="mb-4">
                    <label for="quantity" class="form-label">{{ 'products.show.quantity'|trans({}, 'default') }}</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" 
                           value="1" min="1" max="10" required>
                  </div>

                  <!-- Price Summary -->
                  <div class="card bg-light mb-4">
                    <div class="card-body">
                      <h6 class="mb-3">{{ 'products.show.price_summary'|trans({}, 'default') }}</h6>
                      <div class="d-flex justify-content-between mb-2">
                        <span>{{ 'products.show.base_price'|trans({}, 'default') }}</span>
                        <span id="base-price">{{ product.basePrice|number_format(0, ',', ' ') }}€</span>
                      </div>
                      <div class="d-flex justify-content-between mb-2">
                        <span>{{ 'products.show.options_total'|trans({}, 'default') }}</span>
                        <span id="options-price">0€</span>
                      </div>
                      <div class="d-flex justify-content-between mb-2">
                        <span>{{ 'products.show.quantity_label'|trans({}, 'default') }}</span>
                        <span id="quantity-display">1</span>
                      </div>
                      <hr>
                      <div class="d-flex justify-content-between">
                        <strong>{{ 'products.show.total_price'|trans({}, 'default') }}</strong>
                        <strong class="text-primary h4 mb-0" id="total-price">{{ product.basePrice|number_format(0, ',', ' ') }}€</strong>
                      </div>
                    </div>
                  </div>

                  <!-- Client Information -->
                  <h5 class="mb-3">{{ 'products.show.client_info'|trans({}, 'default') }}</h5>
                  
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="client_name" class="form-label">{{ 'products.show.full_name'|trans({}, 'default') }}</label>
                      <input type="text" class="form-control" id="client_name" name="client_name" required>
                    </div>

                    <div class="col-md-6 mb-3">
                      <label for="client_email" class="form-label">{{ 'products.show.email'|trans({}, 'default') }}</label>
                      <input type="email" class="form-control" id="client_email" name="client_email" required>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="client_phone" class="form-label">{{ 'products.show.phone'|trans({}, 'default') }}</label>
                      <input type="tel" class="form-control" id="client_phone" name="client_phone" required>
                    </div>

                    <div class="col-md-6 mb-3">
                      <label for="client_address" class="form-label">{{ 'products.show.address'|trans({}, 'default') }}</label>
                      <input type="text" class="form-control" id="client_address" name="client_address">
                    </div>
                  </div>

                  <div class="mb-3">
                    <label for="customization_notes" class="form-label">{{ 'products.show.notes'|trans({}, 'default') }}</label>
                    <textarea class="form-control" id="customization_notes" name="customization_notes" rows="3"></textarea>
                  </div>

                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                      {{ 'products.show.configure_quote'|trans({}, 'default') }}
                    </button>
                  </div>
                </form>
              </div>
            </div>

            <script>
              // Price calculation
              const basePrice = {{ product.basePrice }};
              const optionCheckboxes = document.querySelectorAll('.option-checkbox');
              const quantityInput = document.getElementById('quantity');
              const basePriceEl = document.getElementById('base-price');
              const optionsPriceEl = document.getElementById('options-price');
              const quantityDisplayEl = document.getElementById('quantity-display');
              const totalPriceEl = document.getElementById('total-price');

              function formatPrice(price) {
                return new Intl.NumberFormat('fr-FR', { style: 'decimal', minimumFractionDigits: 0 }).format(price) + '€';
              }

              function calculateTotal() {
                let optionsTotal = 0;
                optionCheckboxes.forEach(checkbox => {
                  if (checkbox.checked) {
                    optionsTotal += parseFloat(checkbox.dataset.price);
                  }
                });

                const quantity = parseInt(quantityInput.value) || 1;
                const unitPrice = basePrice + optionsTotal;
                const total = unitPrice * quantity;

                optionsPriceEl.textContent = formatPrice(optionsTotal);
                quantityDisplayEl.textContent = quantity;
                totalPriceEl.textContent = formatPrice(total);
              }

              optionCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', calculateTotal);
              });

              quantityInput.addEventListener('input', calculateTotal);
            </script>
          {% else %}
            <!-- Simple Quote Buttons (no options) -->
            <div class="d-grid gap-2 mb-3">
              <a href="{{ path('app_quote', {'_locale': app.request.locale}) }}" class="btn btn-primary btn-lg">
                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                  <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z"/>
                </svg>
                {{ 'products.show.request_quote'|trans({}, 'default') }}
              </a>
              <a href="https://wa.me/{{ setting('whatsapp')|replace({' ': '', '+': '', '-': ''}) }}?text={{ 'whatsapp.product_inquiry'|trans({'%product%': product.getName(app.request.locale)}, 'default')|url_encode }}" 
                 class="btn btn-success" target="_blank" rel="noopener">
                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                  <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
                </svg>
                {{ 'whatsapp.contact_us'|trans({}, 'default') }}
              </a>
            </div>
          {% endif %}

          <div class="alert alert-info">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
              <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
              <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
            </svg>
            <small>{{ 'products.show.customization_note'|trans({}, 'default') }}</small>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Description -->
  <section class="section bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <h2 class="mb-4">{{ 'products.show.description'|trans({}, 'default') }}</h2>
          <div class="product-description">
            {{ product.getDescription(app.request.locale)|raw }}
          </div>
        </div>

        <div class="col-lg-4">
          <div class="card shadow-sm sticky-top" style="top: 20px;">
            <div class="card-body">
              <h3 class="h5 mb-3">{{ 'products.show.features_title'|trans({}, 'default') }}</h3>
              <ul class="list-unstyled">
                <li class="mb-2">
                  <svg width="20" height="20" fill="currentColor" class="text-success me-2" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                  </svg>
                  {{ 'products.show.feature_quality'|trans({}, 'default') }}
                </li>
                <li class="mb-2">
                  <svg width="20" height="20" fill="currentColor" class="text-success me-2" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                  </svg>
                  {{ 'products.show.feature_warranty'|trans({}, 'default') }}
                </li>
                <li class="mb-2">
                  <svg width="20" height="20" fill="currentColor" class="text-success me-2" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                  </svg>
                  {{ 'products.show.feature_delivery'|trans({}, 'default') }}
                </li>
                <li class="mb-2">
                  <svg width="20" height="20" fill="currentColor" class="text-success me-2" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                  </svg>
                  {{ 'products.show.feature_eco'|trans({}, 'default') }}
                </li>
                <li class="mb-2">
                  <svg width="20" height="20" fill="currentColor" class="text-success me-2" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                  </svg>
                  {{ 'products.show.feature_customizable'|trans({}, 'default') }}
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products -->
  <section class="section">
    <div class="container">
      <h2 class="mb-4">{{ 'products.show.related_products'|trans({}, 'default') }}</h2>
      <div class="row g-4">
        <div class="col-12 text-center text-muted">
          <p>{{ 'products.show.related_products_coming_soon'|trans({}, 'default') }}</p>
          <a href="{{ path('app_products_index', {'_locale': app.request.locale}) }}" class="btn btn-outline-primary">
            {{ 'products.view_all'|trans({}, 'default') }}
          </a>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
