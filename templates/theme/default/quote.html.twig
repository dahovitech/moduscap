{% extends "@theme/base.html.twig" %}

{% block title %}{{ setting('siteName') }} - {{ 'quote.title'|trans({}, 'default') }}{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 mx-auto text-center mb-5">
          <h1 class="mb-4">{{ 'quote.title'|trans({}, 'default') }}</h1>
          <p class="lead">{{ 'quote.subtitle'|trans({}, 'default') }}</p>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-8 mb-4 mb-lg-0">
          <div class="card shadow-sm">
            <div class="card-body p-4">
              <form method="post" action="{{ path('app_quote', {'_locale': app.request.locale}) }}">
                <h3 class="h5 mb-4">{{ 'quote.form.personal_info'|trans({}, 'default') }}</h3>
                
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="first_name" class="form-label">{{ 'form.label.first_name'|trans({}, 'frontend') }} *</label>
                    <input type="text" class="form-control" id="first_name" name="first_name" 
                           placeholder="{{ 'form.placeholder.first_name'|trans({}, 'frontend') }}" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="last_name" class="form-label">{{ 'form.label.last_name'|trans({}, 'frontend') }} *</label>
                    <input type="text" class="form-control" id="last_name" name="last_name" 
                           placeholder="{{ 'form.placeholder.last_name'|trans({}, 'frontend') }}" required>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="email" class="form-label">{{ 'form.label.email'|trans({}, 'frontend') }} *</label>
                    <input type="email" class="form-control" id="email" name="email" 
                           placeholder="{{ 'form.placeholder.email'|trans({}, 'frontend') }}" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="phone" class="form-label">{{ 'form.label.phone'|trans({}, 'frontend') }} *</label>
                    <input type="tel" class="form-control" id="phone" name="phone" 
                           placeholder="{{ 'form.placeholder.phone'|trans({}, 'frontend') }}" required>
                  </div>
                </div>

                <hr class="my-4">

                <h3 class="h5 mb-4">{{ 'quote.form.project_info'|trans({}, 'default') }}</h3>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="model_type" class="form-label">{{ 'quote.form.model_type'|trans({}, 'default') }} *</label>
                    <select class="form-select" id="model_type" name="model_type" required>
                      <option value="">{{ 'quote.form.select_model'|trans({}, 'default') }}</option>
                      <option value="urban">{{ 'quote.model.urban_60'|trans({}, 'default') }}</option>
                      <option value="family">{{ 'quote.model.family_90'|trans({}, 'default') }}</option>
                      <option value="prestige">{{ 'quote.model.prestige_120'|trans({}, 'default') }}</option>
                      <option value="executive">{{ 'quote.model.executive_150'|trans({}, 'default') }}</option>
                      <option value="custom">{{ 'quote.form.custom_model'|trans({}, 'default') }}</option>
                    </select>
                  </div>
                  
                  <div class="col-md-6 mb-3">
                    <label for="surface" class="form-label">{{ 'quote.form.surface'|trans({}, 'default') }} (m²) *</label>
                    <input type="number" class="form-control" id="surface" name="surface" 
                           placeholder="{{ 'quote.form.surface_placeholder'|trans({}, 'default') }}" min="30" max="300" required>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="budget" class="form-label">{{ 'quote.form.budget'|trans({}, 'default') }}</label>
                    <select class="form-select" id="budget" name="budget">
                      <option value="">{{ 'quote.form.select_budget'|trans({}, 'default') }}</option>
                      <option value="50k-100k">50 000€ - 100 000€</option>
                      <option value="100k-150k">100 000€ - 150 000€</option>
                      <option value="150k-200k">150 000€ - 200 000€</option>
                      <option value="200k+">200 000€+</option>
                    </select>
                  </div>
                  
                  <div class="col-md-6 mb-3">
                    <label for="timeline" class="form-label">{{ 'quote.form.timeline'|trans({}, 'default') }}</label>
                    <select class="form-select" id="timeline" name="timeline">
                      <option value="">{{ 'quote.form.select_timeline'|trans({}, 'default') }}</option>
                      <option value="urgent">{{ 'quote.form.timeline_urgent'|trans({}, 'default') }}</option>
                      <option value="3-6months">3-6 {{ 'quote.form.months'|trans({}, 'default') }}</option>
                      <option value="6-12months">6-12 {{ 'quote.form.months'|trans({}, 'default') }}</option>
                      <option value="12months+">12+ {{ 'quote.form.months'|trans({}, 'default') }}</option>
                    </select>
                  </div>
                </div>

                <div class="mb-3">
                  <label for="location" class="form-label">{{ 'quote.form.location'|trans({}, 'default') }} *</label>
                  <input type="text" class="form-control" id="location" name="location" 
                         placeholder="{{ 'quote.form.location_placeholder'|trans({}, 'default') }}" required>
                </div>

                <div class="mb-3">
                  <label class="form-label">{{ 'quote.form.land_available'|trans({}, 'default') }} *</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="land_available" id="land_yes" value="yes" required>
                    <label class="form-check-label" for="land_yes">
                      {{ 'quote.form.land_yes'|trans({}, 'default') }}
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="land_available" id="land_no" value="no" required>
                    <label class="form-check-label" for="land_no">
                      {{ 'quote.form.land_no'|trans({}, 'default') }}
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="land_available" id="land_searching" value="searching" required>
                    <label class="form-check-label" for="land_searching">
                      {{ 'quote.form.land_searching'|trans({}, 'default') }}
                    </label>
                  </div>
                </div>

                <div class="mb-3">
                  <label for="message" class="form-label">{{ 'quote.form.additional_info'|trans({}, 'default') }}</label>
                  <textarea class="form-control" id="message" name="message" rows="5" 
                            placeholder="{{ 'quote.form.additional_info_placeholder'|trans({}, 'default') }}"></textarea>
                </div>

                <div class="form-check mb-4">
                  <input class="form-check-input" type="checkbox" id="accept_terms" name="accept_terms" required>
                  <label class="form-check-label" for="accept_terms">
                    {{ 'quote.form.accept_terms'|trans({}, 'default') }} 
                    <a href="{{ path('app_privacy', {'_locale': app.request.locale}) }}" target="_blank">{{ 'quote.form.privacy_policy'|trans({}, 'default') }}</a>
                  </label>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">
                  <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                    <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z"/>
                  </svg>
                  {{ 'quote.form.submit'|trans({}, 'default') }}
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h3 class="h5 mb-3">{{ 'quote.info.title'|trans({}, 'default') }}</h3>
              <p>{{ 'quote.info.description'|trans({}, 'default') }}</p>
              
              <div class="mb-3">
                <h4 class="h6 mb-2">
                  <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                  </svg>
                  {{ 'quote.info.response_time'|trans({}, 'default') }}
                </h4>
                <p class="mb-0">{{ 'quote.info.response_time_value'|trans({}, 'default') }}</p>
              </div>

              <div class="mb-3">
                <h4 class="h6 mb-2">
                  <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                    <path d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z"/>
                    <path d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z"/>
                  </svg>
                  {{ 'quote.info.free_quote'|trans({}, 'default') }}
                </h4>
                <p class="mb-0">{{ 'quote.info.free_quote_value'|trans({}, 'default') }}</p>
              </div>

              <div class="mb-3">
                <h4 class="h6 mb-2">
                  <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                  </svg>
                  {{ 'quote.info.confidential'|trans({}, 'default') }}
                </h4>
                <p class="mb-0">{{ 'quote.info.confidential_value'|trans({}, 'default') }}</p>
              </div>
            </div>
          </div>

          <div class="card shadow-sm bg-light">
            <div class="card-body">
              <h3 class="h5 mb-3">{{ 'quote.help.title'|trans({}, 'default') }}</h3>
              <p class="small mb-3">{{ 'quote.help.description'|trans({}, 'default') }}</p>
              
              <div class="mb-2">
                <a href="tel:{{ setting('phone') }}" class="btn btn-outline-primary w-100">
                  <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                    <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                  </svg>
                  {{ setting('phone') }}
                </a>
              </div>
              
              <a href="https://wa.me/{{ setting('whatsapp')|replace({' ': '', '+': '', '-': ''}) }}?text={{ 'whatsapp.quote_message'|trans({}, 'default')|url_encode }}" 
                 class="btn btn-success w-100" target="_blank" rel="noopener">
                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                  <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
                </svg>
                WhatsApp
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
