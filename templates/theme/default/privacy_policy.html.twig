{% extends '@theme/base.html.twig' %}

{% block title %}{{ setting('siteName') }} - {{ 'privacy.title'|trans({}, 'default') }}{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 mx-auto">
          <h1 class="mb-4">{{ 'privacy.title'|trans({}, 'default') }}</h1>
          
          <div class="content-block mb-5">
            <h2>{{ 'privacy.intro'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.intro_content'|trans({}, 'default') }}</p>
            <p>{{ 'privacy.intro.description'|trans({}, 'default') }} {{ setting('siteName') }} et décrit comment nous collectons, utilisons, partageons et protégeons vos informations personnelles.</p>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'privacy.data_collected'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.data_collected_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'privacy.data.name'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.data.email'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.data.phone'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.data.address'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.data.project_info'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.data.navigation'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'privacy.data_usage'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.data_usage_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'privacy.usage.process_quotes'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.usage.contact'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.usage.improve'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.usage.newsletter'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.usage.legal'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'privacy.data_security'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.data_security_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'privacy.security.ssl'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.security.restricted_access'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.security.secure_servers'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.security.updates'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'privacy.cookies.title'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.cookies.description'|trans({}, 'default') }}</p>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'privacy.your_rights'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.your_rights_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'privacy.rights.access'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.rights.rectification'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.rights.deletion'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.rights.opposition'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.rights.portability'|trans({}, 'default') }}</li>
              <li>{{ 'privacy.rights.withdrawal'|trans({}, 'default') }}</li>
            </ul>
            <p>{{ 'privacy.rights.contact'|trans({}, 'default') }} <a href="mailto:{{ setting('email') }}">{{ setting('email') }}</a></p>
          </div>

          <div class="content-block">
            <h2>{{ 'privacy.retention.title'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.retention.description'|trans({}, 'default') }}</p>
          </div>

          <div class="content-block mt-5">
            <h2>{{ 'privacy.modifications.title'|trans({}, 'default') }}</h2>
            <p>{{ 'privacy.modifications.description'|trans({}, 'default') }}</p>
            <p><strong>{{ 'privacy.last_update'|trans({}, 'default') }}</strong> {{ 'now'|date('d/m/Y') }}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
