{% extends '@theme/base.html.twig' %}

{% block title %}{{ setting('siteName') }} - {{ 'terms.title'|trans({}, 'default') }}{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 mx-auto">
          <h1 class="mb-4">{{ 'terms.title'|trans({}, 'default') }}</h1>
          
          <div class="content-block mb-5">
            <h2>{{ 'terms.intro'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.intro_content'|trans({}, 'default') }}</p>
            <p>{{ 'terms.intro.acceptance'|trans({}, 'default') }} {{ setting('siteName') }}, vous acceptez sans réserve les présentes conditions générales de vente.</p>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.services'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.services_content'|trans({}, 'default') }}</p>
            <p>{{ 'terms.services.included'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'terms.services.feasibility'|trans({}, 'default') }}</li>
              <li>{{ 'terms.services.manufacturing'|trans({}, 'default') }}</li>
              <li>{{ 'terms.services.transport'|trans({}, 'default') }}</li>
              <li>{{ 'terms.services.installation'|trans({}, 'default') }}</li>
              <li>{{ 'terms.services.connections'|trans({}, 'default') }}</li>
              <li>{{ 'terms.services.warranty'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.pricing'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.pricing_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'terms.pricing.taxes'|trans({}, 'default') }}</li>
              <li>{{ 'terms.pricing.validity'|trans({}, 'default') }}</li>
              <li>{{ 'terms.pricing.customization'|trans({}, 'default') }}</li>
              <li>{{ 'terms.pricing.connections_excluded'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.payment'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.payment_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'terms.payment.deposit'|trans({}, 'default') }}</li>
              <li>{{ 'terms.payment.manufacturing_start'|trans({}, 'default') }}</li>
              <li>{{ 'terms.payment.delivery'|trans({}, 'default') }}</li>
              <li>{{ 'terms.payment.final'|trans({}, 'default') }}</li>
            </ul>
            <p>{{ 'terms.payment.methods'|trans({}, 'default') }}</p>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.delivery'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.delivery_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'terms.delivery.standard_delay'|trans({}, 'default') }}</li>
              <li>{{ 'terms.delivery.accessibility'|trans({}, 'default') }}</li>
              <li>{{ 'terms.delivery.preparation'|trans({}, 'default') }}</li>
              <li>{{ 'terms.delivery.permits'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.warranty'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.warranty_content'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'terms.warranty.one_year'|trans({}, 'default') }}</li>
              <li>{{ 'terms.warranty.two_years'|trans({}, 'default') }}</li>
              <li>{{ 'terms.warranty.ten_years'|trans({}, 'default') }}</li>
            </ul>
            <p>{{ 'terms.warranty.insurance'|trans({}, 'default') }}</p>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.cancellation.title'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.cancellation.intro'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'terms.cancellation.before_manufacturing'|trans({}, 'default') }}</li>
              <li>{{ 'terms.cancellation.after_manufacturing'|trans({}, 'default') }}</li>
              <li>{{ 'terms.cancellation.after_delivery'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.responsibility.title'|trans({}, 'default') }}</h2>
            <p>{{ setting('siteName') }} {{ 'terms.responsibility.intro'|trans({}, 'default') }}</p>
            <ul>
              <li>{{ 'terms.responsibility.force_majeure'|trans({}, 'default') }}</li>
              <li>{{ 'terms.responsibility.client_obligations'|trans({}, 'default') }}</li>
              <li>{{ 'terms.responsibility.modifications'|trans({}, 'default') }}</li>
            </ul>
          </div>

          <div class="content-block mb-5">
            <h2>{{ 'terms.disputes.title'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.disputes.description'|trans({}, 'default') }} {{ setting('siteName') }}.</p>
          </div>

          <div class="content-block">
            <h2>{{ 'terms.acceptance.title'|trans({}, 'default') }}</h2>
            <p>{{ 'terms.acceptance.description'|trans({}, 'default') }}</p>
            <p><strong>Date d'application :</strong> {{ 'now'|date('d/m/Y') }}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
