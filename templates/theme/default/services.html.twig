{% extends '@theme/base.html.twig' %}

{% block title %}{{ setting('siteName') }} - {{ 'services.title'|trans({}, 'default') }}{% endblock %}

{% block body %}
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 mx-auto text-center mb-5">
          <h1 class="mb-4">{{ 'services.title'|trans({}, 'default') }}</h1>
          <p class="lead">{{ 'services.subtitle'|trans({}, 'default') }}</p>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6 mb-4">
          <div class="feature-card text-start h-100">
            <div class="feature-icon mx-0 mb-3">
              <svg width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
              </svg>
            </div>
            <h3>{{ 'services.design.title'|trans({}, 'default') }}</h3>
            <p>{{ 'services.design.description'|trans({}, 'default') }}</p>
          </div>
        </div>
        
        <div class="col-lg-6 mb-4">
          <div class="feature-card text-start h-100">
            <div class="feature-icon mx-0 mb-3">
              <svg width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
              </svg>
            </div>
            <h3>{{ 'services.manufacturing.title'|trans({}, 'default') }}</h3>
            <p>{{ 'services.manufacturing.description'|trans({}, 'default') }}</p>
          </div>
        </div>
        
        <div class="col-lg-6 mb-4">
          <div class="feature-card text-start h-100">
            <div class="feature-icon mx-0 mb-3">
              <svg width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
              </svg>
            </div>
            <h3>{{ 'services.delivery.title'|trans({}, 'default') }}</h3>
            <p>{{ 'services.delivery.description'|trans({}, 'default') }}</p>
          </div>
        </div>
        
        <div class="col-lg-6 mb-4">
          <div class="feature-card text-start h-100">
            <div class="feature-icon mx-0 mb-3">
              <svg width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                <path d="M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3zm5 15h-2v-6H9v6H7v-7.81l5-4.5 5 4.5V18z"/>
              </svg>
            </div>
            <h3>{{ 'services.warranty.title'|trans({}, 'default') }}</h3>
            <p>{{ 'services.warranty.description'|trans({}, 'default') }}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section class="section bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 mx-auto text-center mb-5">
          <h2>{{ 'process.title'|trans({}, 'default') }}</h2>
        </div>
      </div>
      
      <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="feature-card text-center h-100">
            <div class="feature-icon mx-auto mb-3">
              <span style="font-size: 2rem; color: white;">1</span>
            </div>
            <h4>{{ 'process.step_1.title'|trans({}, 'default') }}</h4>
            <p>{{ 'process.step_1.description'|trans({}, 'default') }}</p>
          </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="feature-card text-center h-100">
            <div class="feature-icon mx-auto mb-3">
              <span style="font-size: 2rem; color: white;">2</span>
            </div>
            <h4>{{ 'process.step_2.title'|trans({}, 'default') }}</h4>
            <p>{{ 'process.step_2.description'|trans({}, 'default') }}</p>
          </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="feature-card text-center h-100">
            <div class="feature-icon mx-auto mb-3">
              <span style="font-size: 2rem; color: white;">3</span>
            </div>
            <h4>{{ 'process.step_3.title'|trans({}, 'default') }}</h4>
            <p>{{ 'process.step_3.description'|trans({}, 'default') }}</p>
          </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="feature-card text-center h-100">
            <div class="feature-icon mx-auto mb-3">
              <span style="font-size: 2rem; color: white;">4</span>
            </div>
            <h4>{{ 'process.step_4.title'|trans({}, 'default') }}</h4>
            <p>{{ 'process.step_4.description'|trans({}, 'default') }}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h2>{{ 'cta.title'|trans({}, 'default') }}</h2>
          <p class="lead">{{ 'cta.subtitle'|trans({}, 'default') }}</p>
          <div class="mt-4">
            <a href="{{ path('app_quote', {'_locale': app.request.locale}) }}" class="btn btn-primary btn-lg me-3">{{ 'cta.get_quote_btn'|trans({}, 'default') }}</a>
            <a href="{{ path('app_contact', {'_locale': app.request.locale}) }}" class="btn btn-outline-primary btn-lg">{{ 'cta.contact_us_btn'|trans({}, 'default') }}</a>
          </div>
        </div>
        <div class="col-lg-6 mt-4 mt-lg-0">
          <img src="{{ asset('images/services/design.jpg') }}" 
               alt="{{ setting('siteName') }} - Services de conception" 
               class="img-fluid rounded shadow">
        </div>
      </div>
    </div>
  </section>
{% endblock %}
