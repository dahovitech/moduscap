{% extends '@theme/base.html.twig' %}

{% block title %} {{ parent() }} - {{ 'page.services.title'|trans }}{% endblock %}

{% block body %}
    {# Page Header #}
    <section class="page-header">
        <div class="container">
            <h1 class="fade-in-up">{{ 'services.header.title'|trans }}</h1>
            <p class="fade-in-up">{{ 'services.header.subtitle'|trans }}</p>
        </div>
    </section>

    {# Main Services #}
    <section class="section pt-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-4 animate-on-scroll">
                    <div class="feature-card text-start">
                        <div class="feature-icon mx-0 mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                            </svg>
                        </div>
                        <h3>{{ 'services.conception.title'|trans }}</h3>
                        <p>{{ 'services.conception.description'|trans }}</p>
                        <ul>
                            <li>{{ 'services.conception.item1'|trans }}</li>
                            <li>{{ 'services.conception.item2'|trans }}</li>
                            <li>{{ 'services.conception.item3'|trans }}</li>
                            <li>{{ 'services.conception.item4'|trans }}</li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-4 animate-on-scroll">
                    <div class="feature-card text-start">
                        <div class="feature-icon mx-0 mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                            </svg>
                        </div>
                        <h3>{{ 'services.fabrication.title'|trans }}</h3>
                        <p>{{ 'services.fabrication.description'|trans }}</p>
                        <ul>
                            <li>{{ 'services.fabrication.item1'|trans }}</li>
                            <li>{{ 'services.fabrication.item2'|trans }}</li>
                            <li>{{ 'services.fabrication.item3'|trans }}</li>
                            <li>{{ 'services.fabrication.item4'|trans }}</li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-4 animate-on-scroll">
                    <div class="feature-card text-start">
                        <div class="feature-icon mx-0 mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
                            </svg>
                        </div>
                        <h3>{{ 'services.delivery.title'|trans }}</h3>
                        <p>{{ 'services.delivery.description'|trans }}</p>
                        <ul>
                            <li>{{ 'services.delivery.item1'|trans }}</li>
                            <li>{{ 'services.delivery.item2'|trans }}</li>
                            <li>{{ 'services.delivery.item3'|trans }}</li>
                            <li>{{ 'services.delivery.item4'|trans }}</li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-4 animate-on-scroll">
                    <div class="feature-card text-start">
                        <div class="feature-icon mx-0 mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3zm5 15h-2v-6H9v6H7v-7.81l5-4.5 5 4.5V18z"/>
                            </svg>
                        </div>
                        <h3>{{ 'services.installation.title'|trans }}</h3>
                        <p>{{ 'services.installation.description'|trans }}</p>
                        <ul>
                            <li>{{ 'services.installation.item1'|trans }}</li>
                            <li>{{ 'services.installation.item2'|trans }}</li>
                            <li>{{ 'services.installation.item3'|trans }}</li>
                            <li>{{ 'services.installation.item4'|trans }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Process Timeline #}
    <section class="section bg-light">
        <div class="container">
            <h2 class="section-title">{{ 'services.process.title'|trans }}</h2>
            <p class="section-subtitle">{{ 'services.process.subtitle'|trans }}</p>
            
            <div class="row mt-5">
                <div class="col-lg-4 col-md-6 mb-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <span style="font-size: 2rem; color: white;">1</span>
                        </div>
                        <h4>{{ 'services.process.step1.title'|trans }}</h4>
                        <p>{{ 'services.process.step1.description'|trans }}</p>
                        <p class="text-primary"><strong>{{ 'services.process.step1.delay'|trans }}</strong></p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <span style="font-size: 2rem; color: white;">2</span>
                        </div>
                        <h4>{{ 'services.process.step2.title'|trans }}</h4>
                        <p>{{ 'services.process.step2.description'|trans }}</p>
                        <p class="text-primary"><strong>{{ 'services.process.step2.delay'|trans }}</strong></p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <span style="font-size: 2rem; color: white;">3</span>
                        </div>
                        <h4>{{ 'services.process.step3.title'|trans }}</h4>
                        <p>{{ 'services.process.step3.description'|trans }}</p>
                        <p class="text-primary"><strong>{{ 'services.process.step3.delay'|trans }}</strong></p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <span style="font-size: 2rem; color: white;">4</span>
                        </div>
                        <h4>{{ 'services.process.step4.title'|trans }}</h4>
                        <p>{{ 'services.process.step4.description'|trans }}</p>
                        <p class="text-primary"><strong>{{ 'services.process.step4.delay'|trans }}</strong></p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <span style="font-size: 2rem; color: white;">5</span>
                        </div>
                        <h4>{{ 'services.process.step5.title'|trans }}</h4>
                        <p>{{ 'services.process.step5.description'|trans }}</p>
                        <p class="text-primary"><strong>{{ 'services.process.step5.delay'|trans }}</strong></p>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6 mb-4 animate-on-scroll">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <span style="font-size: 2rem; color: white;">6</span>
                        </div>
                        <h4>{{ 'services.process.step6.title'|trans }}</h4>
                        <p>{{ 'services.process.step6.description'|trans }}</p>
                        <p class="text-primary"><strong>{{ 'services.process.step6.delay'|trans }}</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# CTA Section #}
    <section class="cta-section">
        <div class="container text-center">
            <h2 class="fade-in-up">{{ 'services.cta.title'|trans }}</h2>
            <p class="fade-in-up">{{ 'services.cta.subtitle'|trans }}</p>
            <div class="fade-in-up">
                <a href="{{ path('app_quote_create', {'_locale': app.request.locale}) }}" class="btn btn-primary-custom btn-lg me-3">{{ 'services.cta.btn_quote'|trans }}</a>
                <a href="{{ path('app_contact', {'_locale': app.request.locale}) }}" class="btn btn-outline-light btn-lg">{{ 'services.cta.btn_contact'|trans }}</a>
            </div>
        </div>
    </section>
{% endblock %}
