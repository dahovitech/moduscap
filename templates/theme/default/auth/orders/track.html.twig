{% extends '@theme/base.html.twig' %}

{% block title %}{{ setting('siteName') }} - {{ 'client.track.title'|trans({'%number%': order.orderNumber}, 'default') }}{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ 'client.track.title'|trans({'%number%': order.orderNumber}, 'default') }}</h1>
            <a href="{{ path('app_user_order_detail', {'_locale': app.request.locale, 'orderNumber': order.orderNumber}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>{{ 'client.track.back_to_detail'|trans({}, 'default') }}
            </a>
        </div>
        
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-4">
                {% include '@theme/auth/_sidebar.html.twig' %}
            </div>
            
            <!-- Main Content -->
            <div class="col-lg-9">
                <!-- Order Summary -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <p class="mb-0"><strong>{{ 'client.track.order_number'|trans({}, 'default') }}</strong></p>
                                <p class="text-muted">{{ order.orderNumber }}</p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-0"><strong>{{ 'client.track.order_date'|trans({}, 'default') }}</strong></p>
                                <p class="text-muted">{{ order.createdAt|date('d/m/Y') }}</p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-0"><strong>{{ 'client.track.total'|trans({}, 'default') }}</strong></p>
                                <p class="text-muted">{{ order.total|number_format(0, ',', ' ') }} €</p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-0"><strong>{{ 'client.track.current_status'|trans({}, 'default') }}</strong></p>
                                {% set statusColors = {
                                    'pending': 'warning',
                                    'approved': 'info',
                                    'rejected': 'danger',
                                    'paid': 'success',
                                    'processing': 'primary',
                                    'shipped': 'info',
                                    'delivered': 'success',
                                    'cancelled': 'secondary'
                                } %}
                                <span class="badge bg-{{ statusColors[order.status] ?? 'secondary' }}">
                                    {{ ('order.status.' ~ order.status)|trans({}, 'admin') }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Timeline -->
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-clock-history me-2"></i>{{ 'client.track.timeline'|trans({}, 'default') }}
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            {% for step in timeline %}
                                <div class="timeline-item {{ step.completed ? 'completed' : 'pending' }}">
                                    <div class="timeline-marker">
                                        {% if step.completed %}
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        {% else %}
                                            <i class="bi bi-circle text-muted"></i>
                                        {% endif %}
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">{{ ('client.track.status.' ~ step.status)|trans({}, 'default') }}</h6>
                                        {% if step.date %}
                                            <p class="text-muted small mb-0">{{ step.date|date('d/m/Y à H:i') }}</p>
                                        {% else %}
                                            <p class="text-muted small mb-0">
                                                {% if step.completed %}
                                                    {{ 'client.track.in_progress'|trans({}, 'default') }}
                                                {% else %}
                                                    {{ 'client.track.not_started'|trans({}, 'default') }}
                                                {% endif %}
                                            </p>
                                        {% endif %}
                                        <p class="small mb-0 mt-2">{{ ('client.track.description.' ~ step.status)|trans({}, 'default') }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        
                        {% if order.status == 'rejected' %}
                            <div class="alert alert-danger mt-4">
                                <h6 class="alert-heading">
                                    <i class="bi bi-x-circle me-2"></i>{{ 'client.track.order_rejected'|trans({}, 'default') }}
                                </h6>
                                {% if order.rejectionReason %}
                                    <p class="mb-0">{{ order.rejectionReason }}</p>
                                {% endif %}
                            </div>
                        {% endif %}
                        
                        {% if order.status == 'cancelled' %}
                            <div class="alert alert-secondary mt-4">
                                <h6 class="alert-heading">
                                    <i class="bi bi-slash-circle me-2"></i>{{ 'client.track.order_cancelled'|trans({}, 'default') }}
                                </h6>
                                <p class="mb-0">{{ 'client.track.order_cancelled_message'|trans({}, 'default') }}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 11px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #dee2e6;
}

.timeline-item {
    position: relative;
    padding-bottom: 30px;
}

.timeline-item:last-child {
    padding-bottom: 0;
}

.timeline-marker {
    position: absolute;
    left: -30px;
    top: 0;
    font-size: 24px;
    line-height: 1;
}

.timeline-content {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    border-left: 3px solid #dee2e6;
}

.timeline-item.completed .timeline-content {
    border-left-color: #198754;
}

.timeline-item.pending .timeline-content {
    opacity: 0.6;
}
</style>
{% endblock %}
