<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="text-center mb-3">
            <div class="avatar bg-primary text-white rounded-circle mx-auto mb-2" style="width: 60px; height: 60px; line-height: 60px; font-size: 24px;">
                {{ app.user.firstName|slice(0, 1)|upper }}{{ app.user.lastName|slice(0, 1)|upper }}
            </div>
            <h5 class="mb-0">{{ app.user.fullName }}</h5>
            <small class="text-muted">{{ app.user.email }}</small>
        </div>
        
        <hr>
        
        <nav class="nav flex-column">
            <a class="nav-link{% if app.request.get('_route') == 'app_user_dashboard' %} active{% endif %}" href="{{ path('app_user_dashboard', {'_locale': app.request.locale}) }}">
                <i class="bi bi-speedometer2 me-2"></i>{{ 'client.nav.dashboard'|trans({}, 'default') }}
            </a>
            <a class="nav-link{% if app.request.get('_route') starts with 'app_user_order' %} active{% endif %}" href="{{ path('app_user_orders', {'_locale': app.request.locale}) }}">
                <i class="bi bi-box-seam me-2"></i>{{ 'client.nav.my_orders'|trans({}, 'default') }}
            </a>
            <a class="nav-link" href="{{ path('app_quote_create', {'_locale': app.request.locale}) }}">
                <i class="bi bi-plus-circle me-2"></i>{{ 'client.nav.new_quote'|trans({}, 'default') }}
            </a>
            <a class="nav-link{% if app.request.get('_route') == 'app_user_profile' %} active{% endif %}" href="{{ path('app_user_profile', {'_locale': app.request.locale}) }}">
                <i class="bi bi-person me-2"></i>{{ 'client.nav.profile'|trans({}, 'default') }}
            </a>
            
            <hr>
            
            <a class="nav-link text-danger" href="{{ path('app_user_logout') }}">
                <i class="bi bi-box-arrow-right me-2"></i>{{ 'client.nav.logout'|trans({}, 'default') }}
            </a>
        </nav>
    </div>
</div>

<style>
.nav-link {
    color: #6c757d;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    transition: all 0.2s;
}

.nav-link:hover {
    background-color: #f8f9fa;
    color: #0d6efd;
}

.nav-link.active {
    background-color: #0d6efd;
    color: white;
}

.nav-link i {
    width: 20px;
}
</style>
